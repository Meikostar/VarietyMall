<!-- 标签的背景 label_bg -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 标签选中时的背景 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#318fef" />
            <corners android:bottomLeftRadius="1dp" android:bottomRightRadius="1dp" android:topLeftRadius="1dp" android:topRightRadius="1dp" />
            <solid android:color="#eaf4fd" />
        </shape>

    </item>
    <!-- 标签的正常背景 -->
    <item>
        <shape>
            <!--<stroke android:width="1dp" android:color="#aaaaaa"  />-->
            <solid android:color="#f6f5f5" />
            <corners android:radius="1dp"/>
        </shape>
    </item>
</selector>