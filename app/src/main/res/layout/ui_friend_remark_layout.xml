<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="@dimen/bj_24dp"
    android:orientation="vertical">

    <include layout="@layout/layout_title_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/my_color_F5F5F5">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/bj_10dp"
            android:paddingBottom="@dimen/bj_10dp"
            android:paddingLeft="@dimen/bj_10dp"
            android:text="备注名"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_12sp"/>
        <EditText
            android:id="@+id/ed_friend_remark"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_40dp"
            android:background="@color/my_color_FFFFFF"
            android:gravity="left|top"
            android:hint="暂未设备注名"
            android:paddingLeft="@dimen/bj_10dp"
            android:paddingTop="@dimen/bj_10dp"
            android:text=""
            android:textColor="@color/my_color_333333"
            android:textColorHint="@color/my_color_999999"
            android:textSize="@dimen/wz_14sp"
            android:maxLength="50"/>
    </LinearLayout>
</LinearLayout>