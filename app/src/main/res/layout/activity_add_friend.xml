<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_F0F0F0"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_70dp"
        android:background="@color/my_color_white">
        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_35dp"
            android:paddingLeft="@dimen/bj_15dp"
            android:paddingRight="@dimen/bj_15dp"
            android:src="@mipmap/arrow_topbar" />
        <TextView
            android:id="@+id/add_friend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bj_35dp"
            android:text="添加好友"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_16sp"/>
        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/bj_35dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:text="完成"
            android:textColor="@color/my_color_E10020"
            android:textSize="14sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:background="@color/my_color_F5F5F5"/>
    <RelativeLayout
        android:id="@+id/layout_add_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color_white">
        <ImageView
            android:id="@+id/iv_add_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/bj_15dp"
            android:src="@mipmap/img_add_friend"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_add_friend"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_centerVertical="true"
            android:text="新的朋友"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_16sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:paddingTop="@dimen/bj_20dp"
            android:paddingBottom="@dimen/bj_10dp"
            android:text="输入手机号"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_12sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_40dp"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginTop="@dimen/bj_6dp"
            android:layout_marginRight="@dimen/bj_20dp"
            android:layout_marginBottom="@dimen/bj_6dp"
            android:background="@drawable/bg_white_shape">
            <TextView
                android:id="@+id/tv_search_contacts_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/bj_5dp"
                android:gravity="center"
                android:text="搜索"
                android:textColor="@color/my_color_535353"
                android:textSize="@dimen/wz_13sp" />
            <com.smg.variety.view.widgets.autoview.ClearEditText
                android:id="@+id/et_contacts_search_str"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="@color/my_color_333333"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/add_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_20dp"
        android:background="@color/my_color_white"/>
</LinearLayout>