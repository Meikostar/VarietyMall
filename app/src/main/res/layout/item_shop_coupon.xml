<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bj_88dp"
    android:minHeight="@dimen/bj_88dp"
    android:layout_margin="@dimen/bj_5dp"
    android:background="@mipmap/img_coupon_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_coupon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red_dark"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_10dp"
        android:textSize="@dimen/wz_18sp" />

    <TextView
        android:id="@+id/tv_coupon_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_coupon_title"
        android:textColor="@color/jrmf_red"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_3dp"
        android:singleLine="true"
        android:textSize="@dimen/wz_10sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_coupon_expire_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/bj_10dp"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_toLeftOf="@+id/tv_coupon_status"
        android:textColor="@color/jrmf_red"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/wz_10sp" />

    <TextView
        android:id="@+id/tv_coupon_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/bj_35dp"
        android:textColor="@color/jrmf_red"
        android:textSize="@dimen/wz_18sp" />
</RelativeLayout>