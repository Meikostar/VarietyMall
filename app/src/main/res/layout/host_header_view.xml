<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f3f5f7"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@drawable/lubo1"
        android:id="@+id/rl_mine_user_info"
        android:layout_width="match_parent"
        android:layout_height="240dp">

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:padding="@dimen/bj_5dp"
            android:layout_marginLeft="@dimen/bj_8dp"
            android:layout_marginTop="39dp"
             />
       <LinearLayout
           android:layout_centerHorizontal="true"
           android:layout_marginTop="45dp"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView

               android:id="@+id/iv_img"
               android:layout_width="@dimen/bj_50dp"
               android:layout_height="@dimen/bj_50dp"
               />
           <TextView
               android:id="@+id/tv_name"
               android:layout_marginTop="12dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="韩国海淘丽姿"
               android:textColor="#ffffff"
               android:textSize="16sp"
               android:textStyle="bold"
               android:gravity="left"
               />
           <TextView
               android:id="@+id/tv_cout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="关注 4845"
               android:layout_marginTop="15dp"
               android:textColor="#ffffff"
               android:textSize="14sp"
               />
           <LinearLayout
               android:id="@+id/ll_care"
               android:layout_marginTop="@dimen/bj_19dp"
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:background="@drawable/lubo_bule_gz"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="25dp">
                   <ImageView
                       android:src="@drawable/lubo2"
                       android:id="@+id/iv_care"
                       android:layout_width="@dimen/bj_13dp"
                       android:layout_height="11dp"
                       android:layout_marginLeft="@dimen/bj_9dp"
                     />
                   <TextView
                       android:id="@+id/tv_care"
                       android:layout_marginLeft="2dp"
                       android:layout_marginRight="9dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="关注"
                       android:textColor="#ffffff"
                       android:textSize="12sp"
                       />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/ll_chat"
                   android:layout_marginLeft="12dp"
                   android:background="@drawable/lubo_white_sx"
                   android:gravity="center_vertical"
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="25dp">
                   <ImageView
                       android:src="@drawable/lubo3"
                       android:layout_width="@dimen/bj_13dp"
                       android:layout_height="11dp"
                       android:layout_marginLeft="@dimen/bj_9dp"
                       />
                   <TextView
                       android:layout_marginLeft="2dp"
                       android:layout_marginRight="9dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="私信"
                       android:textColor="#ffffff"
                       android:textSize="12sp"
                       />
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>




    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_liveing"
        android:paddingLeft="@dimen/bj_12dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超大优惠今日折扣"
            android:textColor="#333333"
            android:textSize="15sp"
            />
        <LinearLayout

            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:background="@drawable/liveing_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="21dp">
                <ImageView
                    android:src="@drawable/white_circle"
                    android:layout_width="@dimen/bj_7dp"
                    android:layout_height="7dp"
                    android:layout_marginLeft="@dimen/bj_9dp"
                    />
                <TextView

                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="直播中"
                    android:textColor="#ffffff"
                    android:textSize="11sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_live_count"
                android:layout_marginLeft="6dp"
                android:layout_width="49dp"
                android:layout_height="11dp"
                android:text=""
                android:textColor="#999999"
                android:textSize="11sp"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="@dimen/bj_12dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/bj_21dp"
            android:layout_height="@dimen/bj_14dp"
            android:src="@drawable/lubo"/>
        <TextView
            android:layout_marginLeft="@dimen/bj_6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超大优惠今日折扣"
            android:textColor="#333333"
            android:textSize="14sp"
            />


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/my_color_e5e5e5"/>
</LinearLayout>