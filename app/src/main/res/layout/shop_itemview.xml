<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    tools:targetApi="lollipop"
    android:layout_width="match_parent"
    android:layout_height="255dp"
    android:stateListAnimator="@drawable/lift_on_touch"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">
    <LinearLayout
        android:id="@+id/iv_item_home_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="174dp">
            <ImageView
                android:id="@+id/iv_item_consume_push_img"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_default_6" />
            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="15sp"
                    android:id="@+id/tv_sign"
                    android:text="限量"
                    android:textColor="@color/white"
                    android:background="@drawable/bg_goods_bg"
                    android:gravity="center"
                    android:layout_width="@dimen/bj_46dp"
                    android:layout_height="@dimen/bj_25dp" />
                <TextView
                    android:text=""
                    android:paddingLeft="6dp"
                    android:paddingRight="@dimen/bj_6dp"
                    android:layout_gravity="bottom"
                    android:id="@+id/tv_tag"
                    android:textColor="@color/white"
                    android:background="@color/my_color_goodzs"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textSize="@dimen/wz_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_21dp" />
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/bj_7dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_contury"
                android:layout_marginLeft="2dp"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_contury"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_6dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/my_color_999999"
                android:textSize="12sp" />

        </LinearLayout>
        <TextView
            android:layout_marginLeft="@dimen/bj_7dp"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="产品标题"
            android:textColor="@color/my_color_333333"
            android:textSize="13.5sp" />
        <LinearLayout
            android:layout_marginLeft="@dimen/bj_7dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_3dp"
                android:singleLine="true"
                android:text="¥"
                android:textColor="@color/my_color_FC6f48"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_item_home_good_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_3dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/my_color_FC6f48"
                android:textSize="16sp" />
            <FrameLayout
                android:id="@+id/fl_line"
                android:layout_marginRight="2dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center"
                    android:maxLength="6"
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="right"
                    android:text=""
                    android:textColor="@color/my_color_999999"
                    android:textSize="@dimen/wz_12sp" />

                <View
                    android:id="@+id/line"
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/my_color_999999" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
