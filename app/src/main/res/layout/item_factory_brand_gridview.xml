<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_brand"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/bj_5dp"
    android:layout_marginRight="@dimen/bj_5dp">
    <ImageView
        android:id="@+id/iv_factory_brand"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/tv_factoty_brand"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bj_40dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/iv_factory_brand"
        android:layout_alignLeft="@id/iv_factory_brand"
        android:layout_alignRight="@id/iv_factory_brand"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="SKII-2SKII-2SKII-2SKII-2SKII-2SKII-2SKII-2"
        android:textColor="@color/my_color_black"
        android:textSize="12sp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_factoty_brand"
        android:layout_alignLeft="@id/iv_factory_brand"
        android:layout_alignRight="@id/iv_factory_brand">
        <TextView
            android:id="@+id/tv_factoty_brand_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/my_color_E10020"
            android:textSize="12sp"
            android:text="¥00.00"/>
        <TextView
            android:id="@+id/tv_brand_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_factoty_brand_price"
            android:background="@drawable/bg_orange_brand_shape"
            android:text="爆款"
            android:textSize="8sp"
            android:textColor="@color/my_color_FC6B00"
            android:paddingTop="@dimen/bj_2dp"
            android:paddingLeft="@dimen/bj_5dp"
            android:paddingRight="@dimen/bj_5dp"
            android:paddingBottom="@dimen/bj_2dp"/>
    </RelativeLayout>
</RelativeLayout>