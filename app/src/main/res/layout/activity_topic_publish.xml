<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">
    <include layout="@layout/layout_title_view"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/my_color_f5f5f5">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择话题类型"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/my_color_black"
        android:textSize="@dimen/wz_14sp"/>

    <com.donkingliang.labels.LabelsView
        android:id="@+id/lv_topic_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/my_color_f5f5f5"
        app:labelBackground="@drawable/selector_tag_back"
        app:labelTextColor="@drawable/selector_tag_text_color"
        app:labelTextPaddingBottom="5dp"
        app:labelTextPaddingLeft="15dp"
        app:labelTextPaddingRight="15dp"
        app:labelTextPaddingTop="5dp"
        app:labelTextSize="11sp"
        app:lineMargin="10dp"
        app:maxSelect="30"
        app:wordMargin="10dp" />
    <EditText
        android:id="@+id/ed_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_15dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:layout_marginBottom="@dimen/bj_5dp"
        android:background="@drawable/bg_white_shape"
        android:gravity="left|top"
        android:hint="想说点什么..."
        android:padding="@dimen/bj_10dp"
        android:textColorHint="@color/my_color_999999"
        android:textSize="@dimen/wz_14sp" />
    <LinearLayout
        android:id="@+id/layout_topic_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:gravity="center_vertical">
         <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/ic_topic_site"/>
         <TextView
             android:id="@+id/tv_topic_site"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:hint="你在哪儿呢?"
             android:textSize="@dimen/wz_12sp"
             android:layout_marginLeft="@dimen/bj_5dp"
             android:textColor="@color/my_color_d60029"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recy_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>