<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
         android:layout_marginTop="100dp"
        android:layout_height="228dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:orientation="vertical">



    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:background="@drawable/shape_radius_20_fff">
        <LinearLayout
            android:layout_marginTop="82dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_radius_zs"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:textSize="15sp"
                />
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝数"
                android:textColor="#ffffffff"
                android:textSize="12sp"
                />
        </LinearLayout>
            <View
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="擅长领域"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <View
                android:layout_marginTop="28dp"
                android:layout_marginBottom="28dp"
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:background="#ffffff"/>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主播等级"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
        <ImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"
            android:layout_marginTop="62dp"
            android:id="@+id/tv_gz"
            android:layout_width="@dimen/bj_65dp"
            android:layout_height="@dimen/bj_24dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/shape_radius_zs"
            android:gravity="center"
            android:text="加关注"
            android:textColor="#fff" />
        <TextView

            android:layout_marginTop="10dp"
            android:layout_below="@+id/iv_img"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="#111"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="28dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/actionbar_back"
            android:layout_width="@dimen/bj_31dp"
            android:layout_height="38dp"
            android:padding="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:paddingRight="5dp"
            android:src="@drawable/nav_back_white"
            android:visibility="visible" />

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主播详情"
            android:textColor="#fff"
            android:textSize="18sp"
            />


    </RelativeLayout>
</RelativeLayout>