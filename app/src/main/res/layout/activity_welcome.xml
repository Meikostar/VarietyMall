<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_welcome"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <WebView

        android:visibility="gone"
        android:id="@+id/home_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/bj_20dp"
        android:layout_marginTop="20dp"

        android:paddingBottom="@dimen/bj_5dp"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp"
        android:paddingTop="@dimen/bj_5dp"
        android:text="跳过 3s"
        android:textColor="@color/white"
        android:visibility="gone" />

    <View
        android:visibility="gone"
        android:id="@+id/btn"
        android:layout_width="@dimen/bj_220dp"
        android:layout_height="@dimen/bj_90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="48dp"
        android:gravity="center"
        android:text="立即体验"/>


</RelativeLayout>
