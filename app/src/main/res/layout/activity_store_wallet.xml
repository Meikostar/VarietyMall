<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="205dp"
        android:background="@mipmap/my_wallet_top_bg">
        <TextView
            android:layout_marginTop="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp">

            <TextView
                android:id="@+id/currency_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/total_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00.00"
                android:textColor="#ffffff"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="全部收入"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="当月收入"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="当日收入"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"/>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_one"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_two"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="15sp"
                />
            <TextView
                android:id="@+id/tv_three"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="15sp"
                />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:orientation="horizontal">
      <LinearLayout
          android:id="@+id/ll_cz"
          android:gravity="center"
          android:layout_weight="1"
          android:layout_width="@dimen/bj_0dp"
          android:layout_height="match_parent">
          <ImageView
              android:layout_width="@dimen/bj_16dp"
              android:layout_height="@dimen/bj_16dp"
              android:src="@drawable/stroe_wallet1"/>
          <TextView
              android:layout_marginLeft="13dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="充值余额"
              android:textColor="#ff4091fd"
              android:textSize="16sp"
              />
      </LinearLayout>
        <View
            android:layout_width="@dimen/bj_1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/my_color_line"/>
      <LinearLayout
          android:id="@+id/ll_tx"
          android:gravity="center"
          android:layout_weight="1"
          android:layout_width="@dimen/bj_0dp"
          android:layout_height="match_parent">
          <ImageView
              android:layout_width="@dimen/bj_16dp"
              android:layout_height="@dimen/bj_16dp"
              android:src="@drawable/stroe_wallet2"/>
          <TextView
              android:layout_marginLeft="13dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="余额提现"
              android:textColor="#ff4091fd"
              android:textSize="16sp"
              />
      </LinearLayout>
    </LinearLayout>

  <LinearLayout
      android:layout_marginTop="10dp"
      android:background="@color/white"
      android:layout_width="match_parent"
      android:layout_height="40.5dp">
      <TextView
          android:id="@+id/tv_ch1"
          android:background="#4091FD"
          android:gravity="center"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="全部"
          android:textColor="#ffffffff"
          android:textSize="14sp"
          />
      <TextView
          android:id="@+id/tv_ch2"
          android:gravity="center"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="收入"
          android:textColor="#212121"
          android:textSize="14sp"
          />
      <TextView
          android:id="@+id/tv_ch3"
          android:gravity="center"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          android:text="支出"
          android:textColor="#212121"
          android:textSize="14sp"
          />
  </LinearLayout>

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />
</LinearLayout>