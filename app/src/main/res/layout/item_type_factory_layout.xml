<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_type_factory"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_type_factory"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/img_default_6" />

    <TextView
        android:id="@+id/tv_type_factory_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:singleLine="true"
        android:text="产品标题"
        android:textColor="@color/my_color_333333"
        android:textSize="@dimen/wz_15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_item_type_factory_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:text="¥00.00"
            android:textColor="@color/my_color_E10020"
            android:textSize="@dimen/wz_15sp" />
        <TextView
            android:id="@+id/tv_type_factory_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_brand_store"
            android:layout_marginRight="@dimen/bj_10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_orange_brand_shape"
            android:text="爆款"
            android:textSize="10sp"
            android:textColor="@color/my_color_FC6B00"
            android:paddingTop="@dimen/bj_3dp"
            android:paddingBottom="@dimen/bj_3dp"
            android:paddingLeft="@dimen/bj_5dp"
            android:paddingRight="@dimen/bj_5dp"/>
    </RelativeLayout>

    <LinearLayout

        android:background="@drawable/shape_radius_9_glod"
        android:layout_marginRight="7dp"
        android:id="@+id/ll_sj"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/bj_7dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="19dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sj"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="升级为掌柜再省88元"
            android:layout_marginLeft="8dp"
            android:textColor="#f06a2f"
            android:textSize="10sp"
            />
        <TextView
            android:visibility="gone"
            android:layout_marginRight="8dp"
            android:id="@+id/tv_sjs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="升级"
            android:layout_marginLeft="8dp"
            android:textColor="#f06a2f"
            android:textSize="10sp"
            />
        <ImageView
            android:src="@drawable/sj_arrow"
            android:layout_marginRight="6dp"
            android:id="@+id/iv_sj"
            android:layout_width="9dp"
            android:layout_height="11dp" />
    </LinearLayout>



</LinearLayout>