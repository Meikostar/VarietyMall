<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout

        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/transparent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="right"
            android:src="@drawable/yq_cancel"
            android:layout_alignParentRight="true"
            android:layout_marginRight="43dp"
            android:layout_marginBottom="12dp"
            android:layout_above="@+id/ll_bg"
            android:id="@+id/iv_close"
            android:layout_width="@dimen/bj_34dp"
            android:layout_height="@dimen/bj_34dp" />
        <LinearLayout
            android:layout_centerInParent="true"
            android:background="@drawable/shape_white_5"
            android:layout_marginLeft="43dp"
            android:layout_marginRight="43dp"
            android:id="@+id/ll_bg"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_marginTop="4dp"
                android:id="@+id/ll_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_10dp"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textColor="#111111"
                    android:textSize="18sp"
                    android:gravity="center_vertical"
                    />
                <LinearLayout
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="@dimen/bj_2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_5dp"
                        android:text="¥ "
                        android:textColor="#ff0000"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_marginRight="14dp"
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text=""
                        android:textColor="#ff0000"
                        android:textSize="24sp" />
                </LinearLayout>


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="66dp">

                <com.smg.variety.view.widgets.CircleImageView
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:id="@+id/civ_user_avatar"
                    android:layout_centerVertical="true"
                    android:layout_width="30.5dp"
                    android:layout_height="30.5dp"
                    android:src="@mipmap/ic_head_img"
                    app:border_color="#FFFFFF" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="66dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text=""
                            android:id="@+id/tv_name"
                            android:textColor="#ff3c00"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="44.5dp"
                    android:layout_height="44.5dp" />
            </RelativeLayout>


        </LinearLayout>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ll_bg"
            android:id="@+id/tv_exam_sure"
            android:layout_height="@dimen/bj_44dp"
            android:layout_width="294dp"
            android:layout_marginLeft="@dimen/bj_20dp"

            android:layout_marginRight="@dimen/bj_20dp"
            android:background="@drawable/shape_radius_24_blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/wz_14sp"
            android:text="保存至手机相册" />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_exam_sure"
            android:id="@+id/tv_share"
            android:layout_height="@dimen/bj_44dp"
            android:layout_width="294dp"
            android:layout_marginLeft="@dimen/bj_20dp"

            android:layout_marginRight="@dimen/bj_20dp"
            android:background="@drawable/shape_radius_24_blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/wz_14sp"
            android:text="预览海报长按分享" />

    </LinearLayout>
</RelativeLayout>