<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/bj_20dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_logistics_flag"
            android:layout_width="@dimen/bj_9dp"
            android:layout_height="@dimen/bj_9dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/bg_logistics_flag_default_shape" />

        <ImageView
            android:id="@+id/tv_logistics_line_end"
            android:layout_width="@dimen/bj_1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_logistics_flag"
            android:layout_centerInParent="true"
            android:background="@color/my_color_8b8b8b" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_logistics_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_25dp"
            android:singleLine="true"
            android:text="2019-22-22"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/wz_12sp" />

        <TextView
            android:id="@+id/tv_logistics_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_logistics_time"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="@dimen/bj_24dp"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/wz_12sp" />
    </RelativeLayout>

</LinearLayout>