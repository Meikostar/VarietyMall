<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_FFFFFF">
    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_65dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/bj_25dp"
        android:paddingBottom="@dimen/bj_10dp"
        android:background="@color/transparent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_back"
                android:layout_width="@dimen/bj_56dp"
                android:layout_height="@dimen/bj_29dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/mall_iv_back"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:src="@mipmap/arrow_topbar" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="宝贝详情"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_18sp"/>
            <LinearLayout
                android:id="@+id/layout_share_product"
                android:layout_width="@dimen/bj_56dp"
                android:layout_height="@dimen/bj_29dp"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="@dimen/bj_29dp"
                    android:layout_height="@dimen/bj_29dp"
                    android:src="@mipmap/ic_share_product"
                    android:padding="5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <include layout="@layout/header_baby_detail_bot_layout" />
    <com.smg.variety.view.widgets.autoview.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/header_baby_detail_bottom_layout"
        android:layout_below="@id/topLayout"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_1dp"
                android:background="@color/my_color_F5F5F5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_70dp">
                <ImageView
                    android:id="@+id/img_user_header"
                    android:layout_width="@dimen/bj_50dp"
                    android:layout_height="@dimen/bj_50dp"
                    android:layout_marginLeft="@dimen/bj_10dp"
                    android:src="@mipmap/icon_user_default"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/tv_baby_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_user_header"
                    android:layout_marginLeft="@dimen/bj_10dp"
                    android:layout_toRightOf="@id/img_user_header"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/my_color_black"
                    android:textSize="@dimen/wz_14sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@id/img_user_header"
                    android:layout_alignBottom="@id/img_user_header"
                    android:layout_below="@id/tv_topic_name"
                    android:paddingBottom="@dimen/bj_2dp"
                    android:gravity="bottom">
                    <TextView
                        android:id="@+id/tv_baby_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/bj_10dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="@color/my_color_666666"
                        android:textSize="@dimen/wz_12sp" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_5dp"
                android:background="@color/my_color_F5F5F5"/>
            <TextView
                android:id="@+id/tv_baby_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_50dp"
                android:paddingLeft="@dimen/bj_10dp"
                android:gravity="center_vertical"
                android:text="00.00"
                android:textColor="@color/my_color_d60029"
                android:textSize="@dimen/wz_16sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_5dp"
                android:background="@color/my_color_F5F5F5"/>
            <TextView
                android:id="@+id/tv_baby_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_50dp"
                android:paddingLeft="@dimen/bj_10dp"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/bj_10dp"
                android:paddingBottom="@dimen/bj_10dp"
                android:textColor="@color/my_color_d60029"
                android:textSize="@dimen/wz_16sp" />
             <com.smg.variety.view.widgets.autoview.NoScrollListView
                android:id="@+id/baby_detail_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"/>
        </LinearLayout>
    </com.smg.variety.view.widgets.autoview.ObservableScrollView>
</RelativeLayout>