<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bj_90dp"
    android:paddingLeft="@dimen/bj_10dp"
    android:paddingRight="@dimen/bj_10dp">

    <ImageView
        android:id="@+id/iv_item_integral_balance_icon"
        android:layout_width="@dimen/bj_55dp"
        android:layout_height="@dimen/bj_55dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_item_integral_balance_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_integral_balance_icon"
        android:layout_marginLeft="@dimen/bj_12dp"
        android:layout_marginTop="@dimen/bj_3dp"
        android:layout_toRightOf="@+id/iv_item_integral_balance_icon"
        android:text="良品铺子20元优惠券"
        android:textColor="#ff333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_integral_balance_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_item_integral_balance_name"
        android:layout_alignBottom="@+id/iv_item_integral_balance_icon"
        android:layout_marginBottom="@dimen/bj_3dp"
        android:text="2000积分"
        android:textColor="#ff999999"
        android:textSize="14sp" />

    <TextView
        android:layout_width="@dimen/bj_71dp"
        android:layout_height="@dimen/bj_31dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_radius_16_fd2323"
        android:gravity="center"
        android:text="兑换"
        android:textColor="#ffffffff"
        android:textSize="15sp" />
</RelativeLayout>