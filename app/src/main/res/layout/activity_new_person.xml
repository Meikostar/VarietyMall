<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="26dp"
    android:orientation="vertical">
    <include layout="@layout/layout_title_view" />

    <com.yanzhenjie.recyclerview.swipe.widget.StickyNestedScrollView
        android:background="#fb3403"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout

          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <ImageView
              android:scaleType="fitXY"
              android:id="@+id/iv_bg"
              android:src="@drawable/new_lb_bg"
              android:layout_width="match_parent"
              android:layout_height="328dp"/>
          <com.smg.variety.view.widgets.autoview.MaxRecyclerView
              android:paddingTop="3dp"
              android:layout_marginLeft="13dp"
              android:layout_marginRight="13dp"

              android:background="#fb3403"
              android:id="@+id/entity_store_push_recy"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>
          <com.smg.variety.view.widgets.RegularListView
              android:id="@+id/list_info"
              android:divider="#00000000"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              />
          <TextView
              android:id="@+id/tv_lq"
              android:layout_marginBottom="35dp"
              android:layout_marginTop="13dp"
              android:layout_marginLeft="13dp"
              android:layout_marginRight="13dp"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:text="一键领取"
              android:background="@drawable/shape_radius_20glod"
              android:textColor="#1f1f1f"
              android:textSize="14sp"
              android:gravity="center"
              />
      </LinearLayout>
  </com.yanzhenjie.recyclerview.swipe.widget.StickyNestedScrollView>

</LinearLayout>