<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_black"
    >

    <com.lwkandroid.imagepicker.widget.ImagePickerViewPager
        android:id="@+id/vp_image_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_page"
        android:layout_width="@dimen/bj_50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/imagepicker_text_white"
        android:textSize="@dimen/wz_15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/bj_30dp"
        android:background="#11000000"
        android:gravity="center"
        />

</RelativeLayout>