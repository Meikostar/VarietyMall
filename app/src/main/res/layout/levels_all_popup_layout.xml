<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:background="#00000000">
    <com.smg.variety.view.widgets.autoview.CustomView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/consume_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.donkingliang.labels.LabelsView
                android:paddingBottom="20dp"
                android:layout_marginBottom="40dp"
                android:id="@+id/tv_item_select_contury"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                app:labelBackground="@drawable/label_bgs"
                app:labelTextColor="@drawable/label_text_colors"
                app:labelTextPaddingBottom="8dp"
                app:labelTextPaddingLeft="15dp"
                app:labelTextPaddingRight="15dp"
                app:labelTextPaddingTop="8dp"
                app:labelTextSize="12sp"
                app:lineMargin="10dp"
                app:maxSelect="30"
                app:wordMargin="10dp" />

        </LinearLayout>
    </com.smg.variety.view.widgets.autoview.CustomView>
    <View
        android:background="#00000000"
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
