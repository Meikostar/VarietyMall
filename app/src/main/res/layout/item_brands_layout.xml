<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    tools:targetApi="lollipop"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stateListAnimator="@drawable/lift_on_touch"
    android:layout_marginTop="9dp"
    android:clickable="true"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="@dimen/bj_12dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">
    <LinearLayout
        android:id="@+id/iv_item_home_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color_white"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/white"
            android:layout_marginTop="@dimen/bj_13dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_marginLeft="12dp"
                android:layout_width="@dimen/bj_39dp"
                android:layout_height="@dimen/bj_39dp">
                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="@dimen/bj_39dp"
                    android:layout_height="@dimen/bj_39dp"
                    android:src="@drawable/moren_product" />
                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="bottom|right"
                    android:id="@+id/iv_flag"
                    android:layout_width="@dimen/bj_9dp"
                    android:layout_height="@dimen/bj_9dp"
                  />
            </FrameLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginLeft="12dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="15sp"
                    android:id="@+id/tv_sign"
                    android:text=""
                    android:textColor="@color/my_color_333333"
                    android:gravity="center"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:id="@+id/tv_tag"
                    android:textColor="@color/my_color_999999"

                    android:singleLine="true"
                    android:textSize="@dimen/wz_12sp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_21dp" />
            </LinearLayout>
            <TextView

                android:id="@+id/tv_go"
                android:layout_width="56dp"
                android:layout_height="@dimen/bj_24dp"
                android:layout_marginRight="@dimen/bj_17dp"
                android:background="@drawable/shape_radius_zs_12"
                android:gravity="center"
                android:textColor="#fff"
                android:text="进店"
                android:textSize="13sp" />
        </LinearLayout>



        <TextView
            android:layout_marginTop="13dp"
            android:layout_marginLeft="@dimen/bj_12dp"
            android:id="@+id/tv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/my_color_666666"
            android:textSize="13sp" />
        <LinearLayout
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.smg.variety.view.widgets.autoview.NoScrollGridView
                android:verticalSpacing="3dp"
                android:horizontalSpacing="3dp"
                android:id="@+id/grid_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:listSelector="@color/transparent"
                android:numColumns="3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
