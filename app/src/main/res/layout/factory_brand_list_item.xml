<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
      <ImageView
        android:id="@+id/img_brand_store"
        android:layout_width="@dimen/bj_52dp"
        android:layout_height="@dimen/bj_52dp"
        android:src="@mipmap/ic_brand_store_default"
        android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_brand_store"
            android:layout_marginTop="@dimen/bj_5dp"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_toRightOf="@id/img_brand_store"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="安踏官方旗舰店"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_16sp" />
        <com.smg.variety.view.widgets.ratingbar.BaseRatingBar
            android:id="@+id/rb_brand"
            app:srb_scrollable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_toRightOf="@id/img_brand_store"
            android:layout_alignBottom="@id/img_brand_store"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_below="@id/tv_brand_name"
            app:srb_isIndicator="true"
            app:srb_numStars="5"
            app:srb_rating="5"
            app:srb_starHeight="10dp"
            app:srb_starPadding="2dp"
            app:srb_starWidth="@dimen/bj_10dp" />
        <TextView
            android:id="@+id/tv_brand_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/bg_orange_brand_shape"
            android:paddingBottom="@dimen/bj_3dp"
            android:paddingTop="@dimen/bj_3dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="查看详情"
            android:textSize="@dimen/wz_12sp"
            android:textColor="@color/my_color_FC6B00" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/gv_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_5dp"
        android:layout_marginRight="@dimen/bj_5dp"/>
</LinearLayout>