<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_25dp">

    <include layout="@layout/layout_title_view" />

    <View style="@style/divider_horizontal_f5f5f5_5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginTop="@dimen/bj_32dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:text="姓名"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_110dp"
            android:background="@null"
            android:hint="请输入您的真实姓名" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F5F5F5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginTop="@dimen/bj_17dp">

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:text="性别"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_110dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_male"
                android:layout_width="@dimen/bj_14dp"
                android:layout_height="@dimen/bj_14dp"
                android:background="@drawable/selector_online_singup"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_3dp"
                android:text="男" />

            <RadioButton
                android:id="@+id/rb_female"
                android:layout_width="@dimen/bj_14dp"
                android:layout_height="@dimen/bj_14dp"
                android:layout_marginLeft="@dimen/bj_67dp"
                android:background="@drawable/selector_online_singup"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_3dp"
                android:text="女" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F5F5F5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginTop="@dimen/bj_17dp">

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:text="电话号码"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_110dp"
            android:background="@null"
            android:hint="请输入您的电话号码" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F5F5F5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginTop="@dimen/bj_17dp">

        <TextView
            android:id="@+id/tv_id_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:text="身份证号"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_110dp"
            android:background="@null"
            android:hint="请输入您的身份证号" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F5F5F5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginTop="@dimen/bj_17dp">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:text="电子邮件"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_110dp"
            android:background="@null"
            android:hint="请输入您的电子邮件" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F5F5F5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_action_singup_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_45dp"
        android:background="#E10020"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffffff"
        android:textSize="17sp" />
</LinearLayout>