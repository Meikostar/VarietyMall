<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_F5F5F5"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_68dp"
        android:paddingTop="@dimen/bj_24dp"
        android:background="@color/my_color_FFFFFF">
        <ImageView
            android:id="@+id/iv_redpacket_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/bj_10dp"
            android:paddingRight="@dimen/bj_15dp"
            android:paddingTop="@dimen/bj_10dp"
            android:src="@mipmap/arrow_topbar" />
        <TextView
            android:id="@+id/add_friend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bj_8dp"
            android:text="发积分红包"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginRight="@dimen/bj_15dp"
        android:layout_marginTop="@dimen/bj_15dp"
        android:background="@drawable/bg_white_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/bj_10dp"
            android:text="金额"
            android:textColor="@android:color/black"
            android:textSize="@dimen/wz_14sp" />

        <EditText
            android:id="@+id/et_integral_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="right|center_vertical"
            android:inputType="numberDecimal"
            android:paddingLeft="@dimen/bj_10dp"
            android:paddingRight="@dimen/bj_10dp"
            android:hint="0"
            android:textColorHint="@color/my_color_999999"
            android:textColor="@color/my_color_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_14sp" />
    </LinearLayout>
    <EditText
        android:id="@+id/et_integral_packet_content"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginTop="@dimen/bj_15dp"
        android:layout_marginRight="@dimen/bj_15dp"
        android:layout_marginBottom="@dimen/bj_5dp"
        android:background="@drawable/bg_white_shape"
        android:gravity="left|top"
        android:hint="想说点什么..."
        android:padding="@dimen/bj_10dp"
        android:textColorHint="@color/my_color_999999"
        android:textSize="@dimen/wz_14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginLeft="@dimen/bj_70dp"
        android:layout_marginRight="@dimen/bj_70dp"
        android:layout_marginTop="@dimen/bj_35dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp">

        <TextView
            android:id="@+id/tv_integral_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/bj_10dp"
            android:hint="0"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="积分"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/but_send_submit"
        style="@style/btn_confirm"
        android:layout_marginLeft="@dimen/bj_70dp"
        android:layout_marginRight="@dimen/bj_70dp"
        android:layout_marginTop="@dimen/bj_20dp"
        android:text="发积分红包" />
</LinearLayout>