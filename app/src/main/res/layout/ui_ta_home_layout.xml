<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_F0F0F0">
    <RelativeLayout
        android:id="@+id/ta_home_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_70dp"
        android:background="@color/my_color_white">
        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_35dp"
            android:paddingLeft="@dimen/bj_15dp"
            android:paddingRight="@dimen/bj_15dp"
            android:src="@mipmap/arrow_topbar" />
        <TextView
            android:id="@+id/ta_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bj_35dp"
            android:text="好友名片"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_16sp"/>
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/layout_middle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/my_color_white"
            android:layout_below="@id/ta_home_top_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_80dp"
            android:layout_marginTop="@dimen/bj_15dp"
            android:background="@color/my_color_white"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_ta_home_user_icon"
                android:layout_width="@dimen/bj_70dp"
                android:layout_height="@dimen/bj_70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bj_10dp" />
            <TextView
                android:id="@+id/iv_ta_home_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_15dp"
                android:layout_marginTop="@dimen/bj_5dp"
                android:layout_alignTop="@id/iv_ta_home_user_icon"
                android:layout_toRightOf="@id/iv_ta_home_user_icon"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_18sp"
                android:textStyle="bold" />
            <LinearLayout
                android:id="@+id/mark_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/bj_10dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/iv_ta_home_user_icon">
            <TextView
                android:id="@+id/iv_ta_home_user_mname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_15dp"
                android:textColor="@color/my_color_999999"
                android:textSize="@dimen/wz_12sp" />
            <TextView
                android:id="@+id/iv_ta_home_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_15dp"
                android:textColor="@color/my_color_999999"
                android:textSize="@dimen/wz_13sp" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:id="@+id/ta_home_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_marginLeft="@dimen/bj_30dp"
            android:layout_marginRight="@dimen/bj_30dp"
            android:layout_marginTop="@dimen/bj_40dp"
            android:background="#F5F5F5" />
         <RelativeLayout
           android:id="@+id/iv_ta_home_update_tag"
           android:layout_width="match_parent"
           android:layout_height="@dimen/bj_50dp"
           android:paddingLeft="@dimen/bj_30dp"
           android:visibility="gone"
           android:background="@color/my_color_white">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/bj_15dp"
               android:paddingBottom="@dimen/bj_15dp"
               android:background="@color/my_color_white"
               android:text="修改备注名"
               android:textColor="@color/my_color_black"
               android:textSize="@dimen/wz_15sp" />
         </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/but_ta_home_user_send"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_50dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/layout_middle"
            android:visibility="gone"
            android:gravity="center"
            android:background="@color/my_color_white">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_color_white"
            android:text="发消息"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_15sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/but_ta_home_user_add"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_50dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:layout_below="@id/but_ta_home_user_send"
            android:background="@color/my_color_white"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_color_white"
            android:text="添加好友"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/but_ta_home_user_del"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_50dp"
            android:layout_marginBottom="@dimen/bj_10dp"
            android:background="@color/my_color_white"
            android:gravity="center"
            android:visibility="gone"
            android:layout_alignParentBottom="true">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_color_white"
            android:text="删除好友"
            android:textColor="@color/my_color_E10020"
            android:textSize="@dimen/wz_15sp"/>
        </RelativeLayout>
</RelativeLayout>