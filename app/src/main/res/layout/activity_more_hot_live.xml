<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/my_color_F5F5F5"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_23dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/bj_23dp"
        android:id="@+id/ll_title"

        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/bj_10dp"
            android:paddingRight="@dimen/dp_10"
            android:src="@mipmap/arrow_topbar" />

        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_title_right"
            android:padding="@dimen/bj_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/bj_4dp"
            android:textColor="#ff666666"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>

    <com.smg.variety.view.widgets.autoview.AutoViewPager
        android:id="@+id/main_viewpager"
        android:layout_below="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
