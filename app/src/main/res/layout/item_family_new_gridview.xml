<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:padding="@dimen/bj_5dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_item_family_new"
        android:layout_width="@dimen/bj_110dp"
        android:layout_height="@dimen/bj_110dp"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/tv_item_family_new_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_30dp"
        android:layout_alignLeft="@id/iv_item_family_new"
        android:layout_alignRight="@id/iv_item_family_new"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/iv_item_family_new"
        android:textColor="@color/my_color_333333"
        android:textSize="@dimen/wz_12sp" />
    <LinearLayout
        android:id="@+id/layout_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_item_family_new_title"
        android:layout_alignLeft="@id/iv_item_family_new"
        android:layout_alignRight="@id/iv_item_family_new">
        <TextView
           android:id="@+id/tv_item_family_integral"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:singleLine="true"
           android:textColor="@color/my_color_E10020"
           android:textSize="@dimen/wz_15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:singleLine="true"
            android:textColor="@color/my_color_E10020"
            android:textSize="@dimen/wz_15sp" />
    </LinearLayout>
    <View
        android:id="@+id/family_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:background="@color/my_color_f5f5f5"
        android:layout_below="@id/layout_integral"
        android:layout_alignLeft="@id/iv_item_family_new"
        android:layout_alignRight="@id/iv_item_family_new"
        android:layout_margin="@dimen/bj_5dp"/>
    <RelativeLayout
        android:id="@+id/layout_new_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_line"
        android:layout_alignLeft="@id/iv_item_family_new"
        android:layout_alignRight="@id/iv_item_family_new"
        android:paddingLeft="@dimen/bj_5dp"
        android:paddingRight="@dimen/bj_5dp">
        <ImageView
            android:id="@+id/iv_item_family_head"
            android:layout_width="@dimen/bj_26dp"
            android:layout_height="@dimen/bj_26dp"
            android:src="@mipmap/ic_head_img"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_item_family_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_item_family_head"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="hahahah"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/wz_12sp" />
    </RelativeLayout>
</RelativeLayout>