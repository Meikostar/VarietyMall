<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ScrollView
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:id="@+id/scroll"
        android:layout_centerInParent="true"
        android:scrollbars="none"
        android:background="@drawable/shape_white_5"
        android:layout_width="match_parent"
        android:layout_height="357dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/bj_30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="活动规则"
                android:textColor="#111"
                android:textSize="21sp" />

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_notice_content"
                    android:layout_marginTop="38dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的专属导师微信号："
                    android:textColor="#111111"
                    android:textSize="15sp"
                    android:gravity="left"
                    />

                <!-- TextView "hddklhfkdfh_1_1" -->


                <!-- TextView "hddklhfkdfh_1_1" -->
                <com.smg.variety.view.widgets.autoview.NoScrollWebView
                    android:id="@+id/webView_huodon"
                    android:layout_marginTop="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="WebViewLayout" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>


    <TextView
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/scroll"
        android:id="@+id/tv_exam_sure"
        android:layout_height="@dimen/bj_44dp"
        android:layout_width="294dp"
        android:layout_marginLeft="@dimen/bj_20dp"

        android:layout_marginRight="@dimen/bj_20dp"
        android:background="@drawable/shape_radius_25_glod"
        android:gravity="center"
        android:textColor="#222"
        android:textSize="@dimen/wz_14sp"
        android:text="我知道了" />
    <ImageView
        android:src="@drawable/yq_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/scroll"
        android:id="@+id/iv_close"
        android:layout_width="@dimen/bj_34dp"
        android:layout_height="@dimen/bj_34dp" />
</RelativeLayout>