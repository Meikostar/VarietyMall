<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_entity_store_item"
    android:layout_width="match_parent"
    android:layout_height="115dp">

    <ImageView
        android:layout_marginLeft="8dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dp"
        android:id="@+id/iv_entity_store"
        android:layout_width="@dimen/bj_82dp"
        android:layout_height="@dimen/bj_82dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/bj_8dp"
        android:layout_toRightOf="@+id/iv_entity_store"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <TextView
            android:id="@+id/tv_entity_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星巴克专星送"
            android:textColor="#ff212121"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/tv_pp"
            android:layout_marginLeft="8dp"
            android:background="#FFE557"
            android:layout_width="24dp"
            android:layout_height="13dp"
            android:gravity="center"
            android:text="品牌"
            android:textColor="#ff805a00"
            android:textSize="9sp"
            />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="9dp"
            android:id="@+id/tv_jl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500m"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="3dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_bg"
        android:layout_toRightOf="@+id/iv_entity_store">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:visibility="invisible"
                android:background="@drawable/retgle_back_line_bg"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/tv_label_one"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_8dp"
                android:layout_marginTop="@dimen/bj_2dp"
                android:layout_toRightOf="@+id/iv_entity_store"
                android:textColor="#838383"
                android:textSize="12sp" />
            <TextView
                android:visibility="invisible"
                android:background="@drawable/retgle_back_line_bg"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/tv_label_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_2dp"
                android:layout_below="@+id/tv_label_one"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_toRightOf="@+id/iv_entity_store"
                android:textColor="#838383"
                android:textSize="12sp" />
            <TextView
                android:visibility="invisible"
                android:background="@drawable/retgle_back_line_bg"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:id="@+id/tv_label_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bj_2dp"
                android:layout_below="@+id/tv_label_one"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_toRightOf="@+id/iv_entity_store"
                android:textColor="#838383"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:lines="2"
            android:id="@+id/tv_entity_store_distance"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东省深圳市南山区高新园地铁站  中国科技
开发院712，715室"
            android:textColor="#ff838383"
            android:textSize="12sp"
            />

    </LinearLayout>
    <View
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D9D9D9"
        android:layout_marginLeft="99dp"/>
</RelativeLayout>