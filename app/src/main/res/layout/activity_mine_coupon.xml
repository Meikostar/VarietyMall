<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:background="#f9f9f9"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/bj_10dp"
            android:paddingRight="@dimen/dp_10"
            android:src="@mipmap/arrow_topbar" />

        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_title_right"
            android:padding="@dimen/bj_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/bj_4dp"
            android:textColor="#ff666666"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>


    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stb_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#f9f9f9"
        tl:tl_indicator_color="#fb3403"
        tl:tl_indicator_width="16dp"

        tl:tl_indicator_height="1dp"
        tl:tl_indicator_gravity="BOTTOM"
        tl:tl_indicator_corner_radius="@dimen/bj_1dp"
        tl:tl_indicator_margin_bottom="@dimen/bj_8dp"
        tl:tl_tab_padding="22dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="#fb3403"
        tl:tl_textUnselectColor="#1f1f1f" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>