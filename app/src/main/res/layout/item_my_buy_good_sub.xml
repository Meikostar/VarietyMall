<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_my_buy_good_icon"
        android:layout_width="@dimen/bj_100dp"
        android:layout_height="@dimen/bj_100dp"
        android:layout_below="@+id/tv_item_my_buy_good_time"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginTop="@dimen/bj_10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_default_three"
        android:textColor="#ff999999"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_item_my_buy_good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_my_buy_good_icon"
        android:layout_marginLeft="@dimen/bj_19dp"
        android:layout_marginRight="@dimen/bj_25dp"
        android:layout_toRightOf="@+id/iv_item_my_buy_good_icon"
        android:ellipsize="end"
        android:lines="2"
        android:text="美的可移动小型空调冷暖一体家用厨房书房卧室便携式免安装排水大1.5P"
        android:textColor="#ff303030"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_item_my_buy_good_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_my_buy_good_icon"
        android:layout_marginLeft="@dimen/bj_19dp"
        android:layout_toRightOf="@+id/iv_item_my_buy_good_icon"
        android:textColor="#F02840"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_my_buy_good_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/bj_17dp"
        android:textColor="#fff60004"
        android:textSize="15sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/iv_item_my_buy_good_icon"
        android:layout_marginTop="@dimen/bj_10dp"
        android:background="#EEEEEE" />
</RelativeLayout>