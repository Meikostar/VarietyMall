<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_30dp"
        android:background="@color/my_color_f5f5f5"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bj_16dp"
        android:text=""
        android:textColor="@color/my_color_999999"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/bj_16dp"
        android:text=""
        android:textColor="@color/my_color_333333"
        android:textSize="@dimen/wz_16sp" />

    <TextView
        android:id="@+id/tv_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/bj_16dp"
        android:paddingRight="@dimen/bj_16dp"
        android:paddingBottom="@dimen/bj_16dp"
        android:text=""
        android:textColor="@color/my_color_333333"
        android:textSize="@dimen/wz_16sp" />
</LinearLayout>