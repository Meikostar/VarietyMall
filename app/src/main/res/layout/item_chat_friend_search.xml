<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat_friend_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bj_53dp"
    android:background="@color/my_color_white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_chat_friend_icon"
        android:layout_width="@dimen/bj_40dp"
        android:layout_height="@dimen/bj_40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:src="@mipmap/icon_user_default"/>

    <RelativeLayout
        android:id="@+id/item_chat_friend_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_chat_friend_icon"
        android:layout_alignTop="@id/item_chat_friend_icon"
        android:layout_alignBottom="@id/item_chat_friend_icon">
        <TextView
            android:id="@+id/tv_chat_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/bj_15dp"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_14sp"/>
        <TextView
            android:id="@+id/tv_chat_friend_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/bj_15dp"
            android:textColor="@color/my_color_999999"
            android:textSize="@dimen/wz_12sp" />
    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:background="@color/my_color_f5f5f5"/>
</RelativeLayout>