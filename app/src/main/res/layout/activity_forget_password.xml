<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">

    <include layout="@layout/layout_title_view" />

    <RelativeLayout
        android:background="@drawable/shape_radius_25_f2f2f2"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginTop="@dimen/bj_25dp"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_15dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_forget_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="账号"
            android:textColor="#ff212121"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_forget_account_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bj_7dp"
            android:layout_toRightOf="@+id/tv_forget_account_number"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:hint="手机号"
            android:textColorHint="#999"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true"
            android:background="#f5f5f5" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/shape_radius_25_f2f2f2"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginTop="@dimen/bj_15dp"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_15dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_forget_icon_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textColor="#ff212121"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_forget_icon_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bj_7dp"
            android:layout_marginRight="@dimen/bj_13dp"
            android:layout_toLeftOf="@+id/iv_forget_icon_code"
            android:background="@null"
            android:hint="请输入图形验证码"
            android:textColorHint="#999"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_forget_icon_code"
            android:layout_width="@dimen/bj_81dp"
            android:layout_height="@dimen/bj_35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bj_20dp" />

        <View
            android:layout_width="@dimen/bj_1dp"
            android:layout_height="@dimen/bj_23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="115dp"
            android:background="#f5f5f5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true"
            android:background="#f5f5f5" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/shape_radius_25_f2f2f2"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginTop="@dimen/bj_15dp"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_5dp">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textColor="#ff212121"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_forget_note_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bj_7dp"
            android:layout_marginRight="@dimen/bj_13dp"
            android:layout_toLeftOf="@+id/tv_forget_note_code"
            android:background="@null"
            android:hint="请输入验证码"
            android:textColorHint="#999"
            android:textSize="15sp" />
        <TextView
            android:background="@drawable/shape_radius_18_e10020"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/tv_forget_note_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/bj_5dp"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="13sp" />


        <View
            android:layout_width="@dimen/bj_1dp"
            android:layout_height="@dimen/bj_23dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="115dp"
            android:background="#f5f5f5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true"
            android:background="#f5f5f5" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/shape_radius_25_f2f2f2"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="@dimen/bj_45dp"
        android:layout_marginTop="@dimen/bj_15dp"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_15dp">

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码"
            android:textColor="#ff212121"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_forget_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/bj_7dp"
            android:background="@null"
            android:hint="请重置6位数密码"
            android:maxLength="6"
            android:inputType="textPassword"
            android:textColorHint="#999"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true"
            android:background="#f5f5f5" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_43dp"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginTop="@dimen/bj_33dp"
        android:layout_marginRight="@dimen/bj_15dp"
        android:background="@drawable/shape_radius_5_e10020"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="16sp" />
</LinearLayout>