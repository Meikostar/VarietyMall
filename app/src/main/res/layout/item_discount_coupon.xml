<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/bj_10dp"
    android:layout_marginRight="@dimen/bj_10dp"
    android:layout_marginTop="@dimen/bj_10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/bj_15dp"
        android:paddingBottom="@dimen/bj_15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_coupon_money"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/my_color_666666"
            android:textSize="@dimen/wz_18sp" />

        <TextView
            android:id="@+id/tv_coupon_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/my_color_666666"
            android:textSize="@dimen/wz_14sp" />

        <TextView
            android:id="@+id/tv_coupon_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/my_color_666666"
            android:textSize="@dimen/wz_18sp" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_coupon_expire_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/bj_15dp"
        android:gravity="center|right"
        android:textColor="@color/my_color_666666"
        android:textSize="@dimen/wz_10sp" />
</LinearLayout>