<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardElevation="0dp"
    tools:targetApi="lollipop"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:stateListAnimator="@drawable/lift_on_touch"

    android:clickable="true"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">
    <LinearLayout
        android:id="@+id/iv_item_home_push"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_color_white"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="13dp"
            tools:targetApi="lollipop"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:clickable="false"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#fff">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/img_cs"
                    android:id="@+id/iv_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:src="@drawable/bf_live"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7.5dp"
                    android:background="@drawable/bg_loading_shape"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_gk"
                        />
                    <TextView
                        android:id="@+id/tv_see"
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ffffffff"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="7.5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <FrameLayout

                        android:background="@drawable/red_circle"
                        android:layout_width="28dp"
                        android:layout_height="28dp">
                        <ImageView
                            android:layout_marginTop="2dp"
                           android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:layout_width="24.5dp"
                            android:layout_height="22.5dp"
                            android:src="@drawable/xin_live"
                            />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/tv_care"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ffffffff"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </FrameLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginTop="8dp"
                android:lines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff3274ea"
                android:textSize="15sp"
                />
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:id="@+id/iv_img"
                    />
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阿小七"
                    android:textColor="#ff111111"
                    android:textSize="13sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView

                        tools:targetApi="lollipop"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:clickable="false"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#fff">
                        <ImageView
                            android:visibility="invisible"
                            android:src="@drawable/img_cs"
                            android:id="@+id/iv_two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView

                        tools:targetApi="lollipop"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:clickable="false"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#fff">
                        <ImageView
                            android:src="@drawable/img_cs"
                            android:layout_gravity="center"
                            android:id="@+id/iv_three"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"/>
                    </android.support.v7.widget.CardView>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_price"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="￥1999.00"
                    android:textColor="#ffff0000"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_prices"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1999.00"
                    android:textColor="#ffff0000"
                    android:textSize="12sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
