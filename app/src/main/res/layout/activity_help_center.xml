<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">

    <include
        layout="@layout/layout_title_view" />
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/bj_57dp"
       android:background="@color/my_color_F5F5F5">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_centerVertical="true"
           android:layout_marginLeft="@dimen/bj_15dp"
           android:layout_marginRight="@dimen/bj_15dp"
           android:layout_marginTop="@dimen/bj_13dp"
           android:layout_marginBottom="@dimen/bj_10dp"
           android:background="@drawable/shape_white_2"
           android:gravity="center_vertical"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="13dp"
               android:src="@mipmap/top_search_icon" />

           <com.smg.variety.view.widgets.autoview.ClearEditText
               android:id="@+id/et_search_str"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginLeft="9dp"
               android:layout_marginRight="13dp"
               android:background="@null"
               android:hint="请输入问题关键词"
               android:imeOptions="actionSearch"
               android:singleLine="true"
               android:textColor="@color/my_color_333333"
               android:textSize="12sp" />
       </LinearLayout>
   </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_48dp"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp">
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/bj_15dp"
            android:layout_height="@dimen/bj_15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/mine_wh" />
        <TextView
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="常见问题"
            android:textColor="#ff333333"
            android:textSize="15sp" />



        <View
            style="@style/divider_horizontal_f5f5f5_5"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:background="@color/white"
        style="@style/lv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>




    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5" />
</LinearLayout>