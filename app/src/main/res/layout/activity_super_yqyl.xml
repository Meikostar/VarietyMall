<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e42743"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/white_arrow" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:text="邀请有礼"
            android:textSize="18sp" />

        <TextView
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:id="@+id/tv_gz"
            android:text="活动规则"
            android:textSize="15sp" />
    </RelativeLayout>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="#e42743"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:background="@drawable/yqyl"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
                <LinearLayout
                    android:layout_marginLeft="@dimen/bj_15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="196dp"
                    android:layout_width="match_parent"
                    android:layout_height="249dp"
                    android:orientation="vertical"
                    android:background="@drawable/shape_white_10">
                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <LinearLayout
                         android:layout_marginRight="16dp"
                         android:gravity="center"
                         android:layout_marginTop="28dp"
                         android:layout_marginLeft="44dp"
                         android:layout_weight="1"
                         android:background="@drawable/shape_raido_yqyl"
                         android:orientation="vertical"
                         android:layout_width="0dp"
                         android:layout_height="87dp">
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="掌柜邀请"
                             android:textColor="#ffffffff"
                             android:textSize="15sp"
                             />
                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8"
                                android:textColor="#fffde9a4"
                                android:textSize="24sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="元/人"
                                android:textColor="#fffde9a4"
                                android:textSize="14sp"
                                />
                        </LinearLayout>
                     </LinearLayout>
                     <LinearLayout
                         android:layout_marginLeft="16dp"
                         android:layout_marginTop="28dp"
                         android:layout_marginRight="44dp"
                         android:gravity="center"
                         android:layout_weight="1"
                         android:background="@drawable/shape_raido_yqyl"
                         android:orientation="vertical"
                         android:layout_width="0dp"
                         android:layout_height="87dp">
                         <TextView
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="导师邀请"
                             android:textColor="#ffffffff"
                             android:textSize="15sp"
                             />
                         <LinearLayout
                             android:layout_marginTop="8dp"
                             android:orientation="horizontal"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content">
                             <TextView
                                 android:id="@+id/tv_ds"
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="10"
                                 android:textColor="#fffde9a4"
                                 android:textSize="24sp"
                                 />
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="元/人"
                                 android:textColor="#fffde9a4"
                                 android:textSize="14sp"
                                 />
                         </LinearLayout>
                     </LinearLayout>
                 </LinearLayout>
                    <TextView
                        android:layout_marginTop="20dp"

                        android:id="@+id/tv_yq"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_40dp"
                        android:layout_marginLeft="@dimen/bj_25dp"

                        android:layout_marginRight="@dimen/bj_25dp"
                        android:background="@drawable/shape_radius_25_glod"
                        android:gravity="center"
                        android:text="立即邀请"
                        android:textColor="#111111"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_marginTop="15dp"

                        android:id="@+id/tv_sm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_40dp"
                        android:layout_marginLeft="@dimen/bj_25dp"

                        android:layout_marginRight="@dimen/bj_25dp"
                        android:background="@drawable/shape_radius_25_glod"
                        android:gravity="center"
                        android:text="面对面扫码"
                        android:textColor="#111111"
                        android:textSize="18sp"/>
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="@dimen/bj_15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="143dp"
                android:orientation="vertical"
                android:background="@drawable/shape_white_10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="怎么参与活动赚现金"
                    android:gravity="center"
                    android:textColor="#ffe32841"
                    android:textSize="18sp"
                    />
                <View
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E32841"/>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:id="@+id/ll_fx"
                        android:layout_marginRight="16dp"
                        android:gravity="center"

                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/yq_fx"
                            android:layout_width="@dimen/bj_37dp"
                            android:layout_height="@dimen/bj_37dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:text="点击按钮分享给好友"
                            android:textColor="#ff111111"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_lj"
                        android:layout_marginRight="16dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/yq_lj"
                            android:layout_width="@dimen/bj_37dp"
                            android:layout_height="@dimen/bj_37dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_width="48dp"
                            android:layout_height="wrap_content"
                            android:text="好友点开链接"
                            android:textColor="#ff111111"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_jl"
                        android:layout_marginRight="26dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:src="@drawable/yq_jl"
                            android:layout_width="@dimen/bj_37dp"
                            android:layout_height="@dimen/bj_37dp" />
                        <TextView
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_width="72dp"
                            android:layout_height="wrap_content"
                            android:text="好友下单签收后您得奖励"
                            android:textColor="#ff111111"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>