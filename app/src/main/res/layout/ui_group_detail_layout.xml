<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_F5F5F5"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/group_detail_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_68dp"
        android:paddingTop="@dimen/bj_34dp"
        android:background="@color/my_color_FFFFFF">
        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/bj_15dp"
            android:paddingRight="@dimen/bj_15dp"
            android:src="@mipmap/arrow_topbar" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="群信息"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_18sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/my_color_F5F5F5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/bj_20dp"
        android:paddingRight="@dimen/bj_20dp"
        android:paddingTop="@dimen/bj_10dp"
        android:paddingBottom="@dimen/bj_10dp"
        android:orientation="horizontal"
        android:background="@color/my_color_FFFFFF">
        <LinearLayout
            android:id="@+id/layout_user_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_user_header_one"
                android:layout_width="@dimen/bj_45dp"
                android:layout_height="@dimen/bj_45dp"
                android:layout_alignParentTop="true"
                android:src="@mipmap/icon_user_default" />
           <TextView
                android:id="@+id/tv_user_header_one"
                android:layout_width="@dimen/bj_45dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="middle"
                android:paddingTop="@dimen/bj_5dp"
                android:text="昵称1"
                android:textSize="@dimen/wz_11sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_user_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_user_header_two"
                android:layout_width="@dimen/bj_45dp"
                android:layout_height="@dimen/bj_45dp"
                android:src="@mipmap/icon_user_default" />
            <TextView
                android:id="@+id/tv_user_header_two"
                android:layout_width="@dimen/bj_45dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="middle"
                android:paddingTop="@dimen/bj_5dp"
                android:text="昵称2"
                android:textSize="@dimen/wz_11sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_user_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_user_header_three"
                android:layout_width="@dimen/bj_45dp"
                android:layout_height="@dimen/bj_45dp"
                android:layout_alignParentTop="true"
                android:src="@mipmap/icon_user_default" />
            <TextView
                android:id="@+id/tv_user_header_three"
                android:layout_width="@dimen/bj_45dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="middle"
                android:paddingTop="@dimen/bj_5dp"
                android:text="昵称3"
                android:textSize="@dimen/wz_11sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_group_info_add"
            android:drawablePadding="@dimen/bj_5dp"
            android:gravity="center"
            android:text="添加"
            android:textSize="@dimen/wz_11sp" />

        <TextView
            android:id="@+id/btn_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/icon_group_info_del"
            android:drawablePadding="@dimen/bj_5dp"
            android:gravity="center"
            android:text="删除"
            android:textSize="@dimen/wz_11sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_44dp"
        android:background="@color/my_color_FFFFFF"
        android:gravity="center"
        android:text="查看更多成员"
        android:textColor="@color/my_color_A7A7A7"
        android:textSize="@dimen/wz_12sp"/>

    <LinearLayout
        android:id="@+id/ll_group_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_44dp"
        android:background="@color/my_color_FFFFFF"
        android:layout_marginTop="@dimen/bj_20dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bj_15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群聊名称"
            android:textColor="@color/my_color_black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bj_15dp"
            android:drawableRight="@mipmap/icon_arrow"
            android:drawablePadding="@dimen/bj_5dp"
            android:gravity="right"
            android:textColor="@color/my_color_A7A7A7"
            android:maxWidth="@dimen/bj_200dp"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_group_remark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_44dp"
        android:layout_marginTop="@dimen/bj_5dp"
        android:background="@color/my_color_FFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bj_15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="群公告"
            android:textColor="@color/my_color_black" />
        <TextView
            android:id="@+id/tv_group_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bj_15dp"
            android:drawableRight="@mipmap/icon_arrow"
            android:drawablePadding="@dimen/bj_5dp"
            android:ellipsize="end"
            android:gravity="right"
            android:maxWidth="@dimen/bj_200dp"
            android:singleLine="true"
            android:textColor="@color/my_color_A7A7A7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_group_nick"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_44dp"
        android:layout_marginTop="@dimen/bj_5dp"
        android:background="@color/my_color_FFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bj_15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我在本群的昵称"
            android:textColor="@color/my_color_black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_group_my_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bj_15dp"
            android:drawableRight="@mipmap/icon_arrow"
            android:drawablePadding="@dimen/bj_5dp"
            android:gravity="right"
            android:textColor="@color/my_color_A7A7A7"
            android:singleLine="true"
            android:maxWidth="@dimen/bj_200dp"
            android:ellipsize="end"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_44dp"
        android:layout_marginTop="@dimen/bj_20dp"
        android:background="@color/my_color_white"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingRight="@dimen/bj_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="聊天置顶"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_14sp" />

        <ImageView
            android:id="@+id/img_top_chat"
            android:layout_width="@dimen/bj_35dp"
            android:layout_height="@dimen/bj_18dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/toggle_selector" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></LinearLayout>
    <TextView
        android:id="@+id/ll_group_clean_data"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/my_color_white"
        android:gravity="center"
        android:text="清空聊天记录"
        android:textColor="@color/my_color_E10020"
        android:textSize="@dimen/wz_14sp" />
    <TextView
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/bj_5dp"
        android:layout_height="44dp"
        android:background="@color/my_color_white"
        android:gravity="center"
        android:text="删除并退出"
        android:textColor="@color/my_color_E10020"
        android:textSize="@dimen/wz_14sp" />
</LinearLayout>