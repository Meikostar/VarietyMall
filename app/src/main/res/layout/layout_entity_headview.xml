<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_vp_container"
        android:layout_width="match_parent"
        android:layout_height="222dp">
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            app:indicator_height="6dp"
            app:indicator_margin="4dp"
            app:indicator_width="6dp"

            app:image_scale_type="fit_xy"
            app:is_auto_play="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_opt_store"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:layout_below="@id/rl_vp_container"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_weight="1"

            android:layout_width="0dp"
            android:id="@+id/layout_all"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="#212121"
                android:text="全部"/>
            <ImageView
                android:id="@+id/iv_all"
                android:layout_width="11dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_all"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_down"/>
        </RelativeLayout>
        <View
            android:layout_width="@dimen/bj_1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_vp_container"
            android:layout_marginTop="@dimen/bj_10dp"
            android:layout_marginBottom="@dimen/bj_10dp"
            android:background="@color/my_color_F5F5F5"/>
        <RelativeLayout
            android:id="@+id/layout_near"
            android:layout_weight="1"

            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_near"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="#212121"
                android:text="附近"
                android:gravity="center" />
            <ImageView
                android:id="@+id/iv_near"
                android:layout_width="11dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_near"
                android:src="@drawable/arrow_down"/>
        </RelativeLayout>
        <View
            android:id="@+id/stroe_div_line_two"
            android:layout_width="@dimen/bj_1dp"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_vp_container"
            android:layout_marginTop="@dimen/bj_10dp"
            android:layout_marginBottom="@dimen/bj_10dp"
            android:background="@color/my_color_F5F5F5"/>
        <RelativeLayout
            android:layout_marginRight="15dp"
            android:id="@+id/layout_sx"
            android:layout_weight="1"

            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_sx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="#212121"
                android:text="筛选"
                android:gravity="center" />
            <ImageView
                android:id="@+id/iv_sx"
                android:layout_width="11dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_sx"
                android:src="@drawable/arrow_down"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/layout_opt_store"
        android:background="@color/my_color_line"/>
    <LinearLayout
        android:id="@+id/store_topLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_65dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/bj_25dp"
        android:paddingBottom="@dimen/bj_10dp">
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/store_layout_back"
                android:layout_width="@dimen/bj_50dp"
                android:layout_height="@dimen/bj_29dp"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:layout_width="@dimen/bj_29dp"
                    android:layout_height="@dimen/bj_29dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:src="@drawable/white_arrow"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:id="@+id/store_ll_location"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bj_29dp"
                android:layout_alignParentRight="true">
                <ImageView

                    android:id="@+id/iv_location"
                    android:layout_width="18dp"
                    android:layout_height="23dp"

                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="@dimen/bj_10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/dw_white" />
                <TextView
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:text="ss"
                    android:layout_toLeftOf="@id/iv_location"
                    android:gravity="center_horizontal"
                    android:layout_centerVertical="true"
                    android:textColor="#fff"
                    android:textSize="@dimen/wz_14sp"/>
            </LinearLayout>
            <com.smg.variety.view.widgets.autoview.ClearEditText
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/store_layout_back"
                android:layout_toStartOf="@+id/store_ll_location"
                android:background="@drawable/entity_find_bg"
                android:drawableRight="@mipmap/ic_find"
                android:id="@+id/find"
                android:drawablePadding="13dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:hint="搜索"

                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColorHint="#999999"
                android:textColor="@color/my_color_333333"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>