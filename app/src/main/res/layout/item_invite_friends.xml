<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical"
    android:minHeight="@dimen/bj_75dp"
    android:background="@color/white">
  <LinearLayout
      android:orientation="horizontal"
      android:gravity="center_vertical"
      android:layout_width="match_parent"
      android:layout_height="@dimen/bj_74dp">
    <ImageView
        android:layout_marginLeft="13dp"
        android:layout_width="@dimen/bj_47dp"
        android:layout_height="@dimen/bj_47dp"
        android:id="@+id/iv_img"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/bj_14dp"
        android:orientation="vertical"

        android:gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="@dimen/bj_74dp">
      <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/my_color_333333"
          android:textSize="@dimen/wz_15sp"
          android:text=""/>
      <TextView
          android:layout_marginTop="10dp"
          android:text=""
          android:textSize="@dimen/wz_13sp"
          android:id="@+id/tv_phone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/my_color_999999"
          android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_marginRight="13dp"
        android:text=""
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/my_color_999999"
        android:paddingTop="12dp"
        android:gravity="top"/>
  </LinearLayout>

  <View
      android:layout_marginRight="10dp"
      android:background="@color/my_color_line"
      android:layout_width="match_parent"
      android:layout_height="@dimen/bj_1dp"
    android:layout_marginLeft="75dp"/>

</LinearLayout>