<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/my_color_line"/>
    <com.smg.variety.view.widgets.CircleImageView
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:id="@+id/civ_user_avatar"
        android:layout_centerVertical="true"
        android:layout_width="40.5dp"
        android:layout_height="40.5dp"
        android:src="@drawable/moren_ren"
        app:border_color="#FFFFFF" />
    <LinearLayout
        android:layout_toRightOf="@+id/civ_user_avatar"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#111111"
                android:textSize="12sp"
                />
            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/bg_mine_shape_f3"

                    android:layout_marginLeft="12dp"

                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/iv_state"
                        android:layout_width="15dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="@dimen/bj_6dp"
                        android:src="@drawable/vip_sta" />
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text=""
                        android:id="@+id/tv_state"
                        android:textColor="#fff"
                        android:textSize="10sp" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信号："
           android:id="@+id/tv_wx"
            android:layout_marginTop="7dp"
            android:textColor="#999999"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/create_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="2020-02-05"
            android:textColor="#ff999999"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:background="@drawable/blue_regrect_line"
        android:layout_marginRight="12dp"
        android:id="@+id/account_tv"
        android:layout_width="84dp"
        android:layout_height="27dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="复制微信号"
        android:gravity="center"
        android:textColor="#0266ca"
        android:textSize="12sp" />
</RelativeLayout>