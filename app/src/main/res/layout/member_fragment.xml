<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#f5f5f5"
    android:orientation="vertical">
   <TextView
       android:background="@color/white"
       android:paddingTop="23dp"
       android:layout_width="match_parent"
       android:layout_height="67dp"
       android:gravity="center"
       android:text="会员"
       android:textColor="#000000"
       android:textSize="21sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/my_color_f5f5f5"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:background="@drawable/member_bg"
                    android:layout_width="match_parent"
                    android:layout_height="137dp">

                    <com.smg.variety.view.widgets.CircleImageView
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center"
                        android:id="@+id/civ_user_avatar"
                        android:layout_width="60.5dp"
                        android:layout_height="60.5dp"
                        android:src="@mipmap/ic_head_img"
                        app:border_color="#FFFFFF" />
                    <LinearLayout
                        android:layout_marginLeft="86dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout

                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:text=""
                                android:id="@+id/tv_name"
                                android:textColor="#fff"
                                android:textSize="15sp" />
                            <RelativeLayout

                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:background="@drawable/bg_mine_shape_f3"

                                    android:layout_marginLeft="12dp"

                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="22dp"
                                    android:gravity="center_vertical">
                                    <ImageView
                                        android:id="@+id/iv_state"
                                        android:layout_width="16dp"
                                        android:layout_height="18dp"
                                        android:layout_marginLeft="@dimen/bj_6dp"
                                        android:src="@drawable/vip_sta" />
                                    <TextView
                                        android:layout_marginLeft="3dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center_vertical"
                                        android:text=""
                                        android:id="@+id/tv_state"
                                        android:textColor="#fff"
                                        android:textSize="12sp" />

                                </LinearLayout>


                            </RelativeLayout>
                        </LinearLayout>
                        <TextView
                            android:layout_marginTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="邀请码"
                            android:id="@+id/tv_code"
                            android:textColor="#fff"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_wchat"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="86dp"
                        android:background="@drawable/bg_mine_shape_fff"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_marginLeft="11dp"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:text="微信专属导师"
                            android:textColor="#009aff"
                            android:textSize="12sp" />
                        <ImageView

                            android:layout_width="8dp"
                            android:layout_height="11dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/arrow_right" />

                    </LinearLayout>
                </RelativeLayout>


            <LinearLayout
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginTop="19dp"
                android:id="@+id/card_tx"
                android:background="@drawable/shape_white_5"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="收益提现"
                    android:textColor="#111"
                    android:textSize="18sp" />
                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:gravity="center_vertical"
                    android:text="提现"
                    android:textColor="#999"
                    android:textSize="15sp" />
                <ImageView

                    android:layout_width="8dp"
                    android:layout_height="11dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/arrow_right" />

            </LinearLayout>
            <com.youth.banner.Banner
                android:layout_marginTop="15dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:id="@+id/iv_banner"
                android:layout_width="match_parent"
                android:layout_height="87dp"
                app:indicator_height="6dp"
                app:indicator_margin="4dp"
                app:indicator_width="6dp"
                app:image_scale_type="fit_xy"
                app:is_auto_play="true"/>
            <LinearLayout
                android:background="@drawable/shape_white_5"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical"
                android:layout_width="match_parent"

                android:layout_height="118dp">
                <LinearLayout
                    android:id="@+id/ll_sy"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_40dp">

                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/bj_15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/bj_40dp"
                        android:gravity="center_vertical"
                        android:text="预估收益"
                        android:textColor="#111"
                        android:textSize="18sp" />
                    <TextView
                        android:visibility="gone"
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="更多"
                        android:textColor="#999"
                        android:textSize="15sp" />
                    <ImageView
                         android:visibility="gone"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/bj_14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">



                    <LinearLayout
                        android:id="@+id/ll_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#ff0300"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日推广收益"
                            android:textColor="#2b2b2b"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#ff0300"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日推荐收益"
                            android:textColor="#2b2b2b"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_three"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#ff0300"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日平台补贴"
                            android:textColor="#2b2b2b"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_four"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_four"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#ff0300"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日全部收益"
                            android:textColor="#2b2b2b"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="88dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    tools:targetApi="lollipop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="1dp"
                    app:cardBackgroundColor="#f5f5f5"
                    app:cardUseCompatPadding="false"
                    app:cardPreventCornerOverlap="false">
                    <ImageView

                        android:id="@+id/iv_one"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginLeft="6dp"
                    tools:targetApi="lollipop"
                    app:cardBackgroundColor="#f5f5f5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="1dp"
                    app:cardUseCompatPadding="false"
                    app:cardPreventCornerOverlap="false">
                    <ImageView

                        android:id="@+id/iv_two"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY" />
                </android.support.v7.widget.CardView>





            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_hy"
                android:background="@drawable/shape_white_5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="118dp">
                <LinearLayout


                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_40dp">

                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/bj_15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/bj_40dp"
                        android:gravity="center_vertical"
                        android:text="我的会员"
                        android:textColor="#111"
                        android:textSize="18sp" />
                    <TextView

                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"

                        android:textColor="#999"
                        android:textSize="15sp" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/bj_14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_five"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#ff0300"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我注册用户"
                            android:textColor="#2b2b2b"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_six"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#ff0300"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我的掌柜"
                            android:textColor="#2b2b2b"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_seven"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#ff0300"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部掌柜"
                            android:textColor="#2b2b2b"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_eight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#ff0300"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部会员"
                            android:textColor="#2b2b2b"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shape_white_5"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="23dp"
                android:layout_marginRight="23dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="118dp">
                <LinearLayout
                    android:id="@+id/ll_dd"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_40dp">

                    <TextView
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/bj_15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/bj_40dp"
                        android:gravity="center_vertical"
                        android:text="我的推广订单"
                        android:textColor="#111"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_marginLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:gravity="center_vertical"
                        android:text="更多"
                        android:textColor="#999"
                        android:textSize="15sp" />
                    <ImageView

                        android:layout_width="8dp"
                        android:layout_height="11dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/arrow_right" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/bj_14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_night"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#ff0300"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="今日购买订单量"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_ten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="#ff0300"
                            android:textSize="15sp"

                            />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部购买订单量"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>





        </LinearLayout>
    </ScrollView>

</LinearLayout>