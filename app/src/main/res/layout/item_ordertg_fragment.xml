<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    android:id="@+id/item_order_content">
  <LinearLayout
      android:background="@color/white"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <RelativeLayout

          android:layout_width="match_parent"
          android:layout_height="@dimen/bj_50dp">
          <ImageView
              android:src="@drawable/moren_ren"
              android:layout_marginLeft="@dimen/bj_12dp"
              android:id="@+id/iv_img"
              android:layout_centerVertical="true"
              android:layout_width="@dimen/bj_30dp"
              android:layout_height="@dimen/bj_30dp" />
          <TextView
              android:layout_marginLeft="52dp"
              android:id="@+id/tv_shop_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:drawablePadding="@dimen/bj_5dp"
              android:textColor="#ff333333"
              android:textSize="14sp" />

          <TextView
              android:id="@+id/tv_status"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_centerVertical="true"
              android:layout_marginRight="17dp"
              android:textColor="#ff0000"
              android:textSize="14sp" />

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_alignParentBottom="true"
              android:background="#F5F5F5" />
      </RelativeLayout>

      <android.support.v7.widget.RecyclerView
          android:id="@+id/item_order_goods_list"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
      <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:background="@color/my_color_line"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <LinearLayout
              android:layout_marginTop="10dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_marginLeft="8dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="订单号："
                  android:textColor="#111111"
                  android:textSize="10sp"
                  android:gravity="center"
                  />

              <!-- TextView "1145663225556633_1_1" -->
              <TextView
                  android:id="@+id/tv_no"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="1145663225556633"
                  android:textColor="#111111"
                  android:textSize="12sp"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_marginTop="10dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_weight="1"
                  android:layout_marginLeft="8dp"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="下单时间:"
                  android:textColor="#111111"
                  android:textSize="10sp"
                   android:id="@+id/tv_down_time"

                  />

              <!-- TextView "1145663225556633_1_1" -->
              <TextView
                  android:id="@+id/tv_time"
                  android:layout_weight="1"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="完成时间:"
                  android:textColor="#111111"
                  android:textSize="10sp"
                  />
          </LinearLayout>
          <LinearLayout
              android:layout_marginBottom="12dp"
              android:layout_marginTop="10dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
             <LinearLayout
                 android:layout_weight="1"
                 android:layout_marginLeft="8dp"
                 android:orientation="horizontal"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="计佣金额："

                     android:textColor="#111111"
                     android:textSize="12sp"
                     android:gravity="left"
                     />

                 <!-- TextView "2628_00_1_1" -->
                 <TextView
                     android:id="@+id/tv_prices"
                     android:layout_width="11dp"
                     android:layout_height="wrap_content"
                     android:text=""
                     android:textColor="#ff0000"
                     android:textSize="12sp" />
             </LinearLayout>
             <LinearLayout
                 android:layout_weight="1"
                 android:orientation="horizontal"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content">
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="预估推广收益："

                     android:textColor="#111111"
                     android:textSize="12sp"
                     android:gravity="left"
                     />

                 <!-- TextView "2628_00_1_1" -->
                 <TextView
                     android:id="@+id/tv_tgsy"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text=""
                     android:textColor="#ff0000"
                     android:textSize="12sp"
                     />
             </LinearLayout>
          </LinearLayout>

      </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_alignParentBottom="true"
          android:background="#F5F5F5" />
      <LinearLayout
          android:id="@+id/ll_bg"
          android:layout_width="match_parent"
          android:layout_height="@dimen/bj_50dp"
          android:gravity="right|center_vertical">

          <TextView
              android:id="@+id/tv_button_1"
              android:paddingTop="@dimen/bj_4dp"
              android:paddingBottom="@dimen/bj_4dp"
              android:paddingLeft="8dp"
              android:paddingRight="@dimen/bj_8dp"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/bj_26dp"
              android:layout_marginRight="@dimen/bj_15dp"
              android:background="@drawable/shape_radius_14_999999"
              android:gravity="center"
              android:textColor="#333"
              android:textSize="13sp"
              android:visibility="visible" />

          <TextView
              android:paddingTop="@dimen/bj_4dp"
              android:paddingBottom="@dimen/bj_4dp"
              android:paddingLeft="14dp"
              android:paddingRight="@dimen/bj_14dp"
              android:id="@+id/tv_button_2"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/bj_26dp"
              android:layout_marginRight="@dimen/bj_17dp"
              android:background="@drawable/shape_radius_14_blue"
              android:gravity="center"

              android:textColor="#fff"
              android:textSize="13sp" />


      </LinearLayout>
  </LinearLayout>

</LinearLayout>