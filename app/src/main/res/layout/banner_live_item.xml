<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#2864D9"
    android:layout_width="match_parent"
    android:layout_height="278dp">
<LinearLayout
    android:id="@+id/ll_bg"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            tools:targetApi="lollipop"
            android:layout_width="190dp"
            android:layout_height="175dp"
            android:clickable="false"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2864D9">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/img_cs"
                    android:id="@+id/iv_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:src="@drawable/bf_live"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
            </FrameLayout>
        </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/tv_one"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温柔的天使"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/tv_ones"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="9dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="生活的好帮手，给你小窍门"
        android:textColor="#ffa3c4ff"
        android:textSize="13sp"
        />
</LinearLayout>
    <View
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/ll_bg1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_marginTop="40dp"

            tools:targetApi="lollipop"
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:clickable="false"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#2864D9">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/img_cs"
                    android:id="@+id/iv_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"/>
                <ImageView
                    android:src="@drawable/bf_live"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"/>
            </FrameLayout>
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_two"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温柔的天使"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_twos"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生活的好帮手，给你小窍门"
            android:textColor="#ffa3c4ff"
            android:textSize="13sp"
            />
    </LinearLayout>
</LinearLayout>