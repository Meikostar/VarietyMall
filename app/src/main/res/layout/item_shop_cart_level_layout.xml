<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_item_shop_cart_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_marginRight="@dimen/bj_3dp"
            android:id="@+id/cb_item_shop_cart"
            style="@style/checkbox.theme"
            android:layout_width="@dimen/bj_33dp"
            android:layout_height="@dimen/bj_33dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:padding="@dimen/bj_5dp" />

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_marginBottom="18dp"
            android:id="@+id/iv_item_shop_cart_cover"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/moren_sf" />

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_shop_cart_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:lines="2"
                android:lineSpacingExtra="1dp"
                android:textColor="@color/my_color_333333"
                android:textSize="@dimen/wz_13sp" />

            <TextView

                android:id="@+id/tv_item_shop_cart_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/my_color_999999"
                android:textSize="@dimen/wz_12sp" />

            <RelativeLayout
                android:layout_marginTop="58dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text=""
                    android:id="@+id/tv_item_shop_cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="#fc6f48"
                    android:textSize="@dimen/wz_15sp" />
                <LinearLayout
                    android:background="@drawable/card_regrect_line"
                    android:layout_width="wrap_content"
                    android:minWidth="82dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="14dp"
                    android:layout_height="23.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/bj_14dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:id="@+id/decrease"
                        android:layout_width="22dp"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="8dp"
                            android:background="@color/my_color_999999"
                            android:layout_height="1.3dp"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>

                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="match_parent"
                        android:background="#999"/>
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/count"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/my_color_666666"
                        android:textSize="15sp" />
                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="match_parent"
                        android:background="#999"/>
                    <TextView

                        android:id="@+id/increase"
                        android:textColor="#999"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="+"
                        android:layout_width="@dimen/bj_22dp"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/my_color_line"/>
</LinearLayout>