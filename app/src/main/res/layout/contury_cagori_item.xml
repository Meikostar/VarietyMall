<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iv_item_home_push"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <com.smg.variety.view.widgets.OvalImageView
        android:id="@+id/iv_item_consume_push_img"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:scaleType="fitXY"
        android:src="@drawable/moren_sf" />




    <LinearLayout
        android:layout_marginLeft="@dimen/bj_7dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_contury"
            android:layout_marginLeft="2dp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_contury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_6dp"
            android:singleLine="true"
            android:gravity="center"
            android:text=""
            android:textColor="@color/my_color_999999"
            android:textSize="13sp" />

    </LinearLayout>
    <TextView
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="@dimen/bj_7dp"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/my_color_zs"
        android:textSize="13.5sp" />

</LinearLayout>

