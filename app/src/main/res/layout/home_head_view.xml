<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/my_color_white"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.youth.banner.Banner
            android:background="@color/my_color_999999"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="126dp"
            app:image_scale_type="fit_xy"
            app:is_auto_play="true"/>

        <ImageView
            android:id="@+id/acb_status_bar"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:background="#00000000"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <RelativeLayout
            android:layout_below="@+id/acb_status_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/actionbar_back"
                android:layout_width="@dimen/bj_31dp"
                android:layout_height="38dp"
                android:padding="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:paddingRight="5dp"
                android:src="@drawable/nav_back_white"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_marginLeft="55dp"
                android:layout_marginRight="50dp"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:layout_marginTop="@dimen/bj_7dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shop_searh_bg"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:orientation="horizontal">
                <ImageView

                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/white_search"
                    android:layout_width="@dimen/bj_14dp"
                    android:layout_height="@dimen/bj_14dp"/>
                <EditText
                    android:layout_marginRight="15dp"
                    android:paddingLeft="30dp"
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@null"
                    android:imeOptions="actionSearch"
                    android:hint="请输入搜素关键字"
                    android:textColorHint="@color/white"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_labe"
                android:src="@drawable/home_message"
                android:layout_marginRight="9dp"
                android:padding="6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/bj_30dp"
                android:layout_height="@dimen/bj_30dp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_img"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="110dp"
            android:layout_width="75dp"
            android:layout_height="75dp"/>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="136dp"
            android:layout_marginLeft="98dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:textColor="@color/my_color_333333"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_content"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/my_color_666666"
                    android:textSize="12.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_attention"
                android:layout_marginRight="13dp"
                android:layout_marginLeft="13dp"
                android:gravity="center"
                android:background="@drawable/shape_radius_14"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:minWidth="80dp"
                android:paddingTop="4dp"
                android:text="+ 关注"
                android:paddingBottom="@dimen/bj_4dp"
                android:textColor="@color/my_color_333333"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_marginBottom="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:lines="2"
        android:layout_marginTop="15dp"
        android:textColor="@color/my_color_999999"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:lineSpacingExtra="2dp"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/my_color_f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_30dp"
        android:layout_marginTop="@dimen/bj_7dp"
        android:layout_marginBottom="@dimen/bj_7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop_product_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="综合"
            android:textColor="@drawable/text_color_radio_gray_select"
            android:textSize="@dimen/wz_15sp" />

        <TextView
            android:id="@+id/tv_shop_product_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="上新"
            android:textColor="@drawable/text_color_radio_gray_select"
            android:textSize="@dimen/wz_15sp" />

        <LinearLayout
            android:id="@+id/ll_shop_product_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shop_product_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="center"
                android:text="价格"
                android:textColor="@drawable/text_color_radio_gray_select"
                android:textSize="@dimen/wz_15sp" />

            <ImageView
                android:id="@+id/iv_shop_product_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/bj_7dp"
                android:focusable="true"
                android:src="@mipmap/arrow_defaut"
                android:tag="priceSelect" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shop_product_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_shop_product_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="center"
                android:text="筛选"
                android:textColor="@drawable/text_color_radio_gray_select"
                android:textSize="@dimen/wz_15sp" />

            <ImageView
                android:id="@+id/iv_shop_product_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/bj_7dp"
                android:focusable="true"

                android:tag="productSelect" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_color_EBEBEB" />








</LinearLayout>