<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">


    <include layout="@layout/layout_title_view" />

    <View
        style="@style/divider_horizontal_f5f5f5_5"
        android:layout_height="10dp" />


   <LinearLayout

       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="13dp"
           android:layout_marginTop="25dp"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="left"
               android:text="升级进展："
               android:textColor="#111111"
               android:textSize="18sp" />

           <!-- TextView "_1_1" -->
           <TextView
               android:id="@+id/tv_state"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="待审核"
               android:textColor="#ffa200"
               android:textSize="18sp" />
       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="26dp"
           android:layout_marginTop="25dp"
           android:layout_marginBottom="13dp"
           android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="left"
               android:id="@+id/tv_content"
               android:text="您已成功上传截图，请耐心等待审核通过！"
               android:textColor="#111111"
               android:textSize="15sp" />


       </LinearLayout>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bg"
        android:visibility="gone"
        android:layout_marginTop="85dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="29dp"
            android:layout_marginRight="39dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核未通过原因："
            android:textColor="#111111"
            android:textSize="15sp"
            android:gravity="left"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_yy"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="39dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:textSize="15sp"
            android:gravity="left"
            />
    </LinearLayout>
    <com.smg.variety.view.widgets.NoScrollGridView
        android:layout_marginBottom="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:verticalSpacing="3dp"
        android:horizontalSpacing="3dp"
        android:id="@+id/grid_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:listSelector="@color/transparent"
        android:numColumns="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
    <TextView
        android:layout_marginTop="60dp"
        android:layout_marginBottom="55dp"
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_43dp"
        android:layout_marginLeft="@dimen/bj_15dp"

        android:layout_marginRight="@dimen/bj_15dp"
        android:background="@drawable/shape_radius_25_glod"
        android:gravity="center"
        android:text="重新提交"
        android:textColor="#111111"
        android:textSize="18sp"/>

</LinearLayout>