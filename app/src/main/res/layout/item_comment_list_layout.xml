<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">
    <RelativeLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
        <ImageView
            android:id="@+id/img_comment_head"
            android:layout_width="@dimen/bj_35dp"
            android:layout_height="@dimen/bj_35dp"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_comment_head"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_toRightOf="@id/img_comment_head"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_12sp" />
         <TextView
             android:id="@+id/tv_comment_time"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/bj_10dp"
             android:layout_toRightOf="@id/img_comment_head"
             android:layout_alignBottom="@id/img_comment_head"
             android:textSize="@dimen/wz_12sp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bj_10dp"
        android:gravity="left"
        android:layout_marginLeft="@dimen/bj_100dp"
        android:layout_below="@id/layout_info"
        android:ellipsize="end"
        android:textColor="@color/my_color_black"
        android:textSize="@dimen/wz_14sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/bj_10dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_praise"/>
        <TextView
            android:id="@+id/tv_item_article_dianzan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_5dp"
            android:text="0"
            android:textColor="#ff999999"
            android:textSize="10sp" />
    </LinearLayout>
</RelativeLayout>