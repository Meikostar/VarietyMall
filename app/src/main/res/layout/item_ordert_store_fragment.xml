<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:id="@+id/item_order_content">
    <LinearLayout
        android:background="@drawable/shape_white_5"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_50dp">
            <LinearLayout
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号："
                    android:textColor="#111111"
                    android:textSize="10sp"
                    android:gravity="center"
                    />

                <!-- TextView "1145663225556633_1_1" -->
                <TextView
                    android:id="@+id/tv_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1145663225556633"
                    android:textColor="#111111"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="17dp"
                android:textColor="#ff0000"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#F5F5F5" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_order_goods_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:id="@+id/ll_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_50dp"
            android:gravity="right|center_vertical">

            <TextView
                android:id="@+id/tv_button_1"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bj_26dp"
                android:layout_marginRight="@dimen/bj_3dp"
                android:gravity="center"
                android:text="共2件商品，合计"
                android:textColor="#6C6E74"
                android:textSize="12sp"
                android:visibility="visible" />

            <TextView
                android:paddingTop="@dimen/bj_4dp"
                android:paddingBottom="@dimen/bj_4dp"
                android:paddingRight="@dimen/bj_10dp"
                android:id="@+id/tv_button_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/bj_26dp"
                android:layout_marginRight="@dimen/bj_17dp"
                android:gravity="center"
                android:text="$5555.23"
                android:textColor="#ff0000"
                android:textSize="13sp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>