<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iv_item_mall_like"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/bj_5dp"
    android:layout_marginRight="@dimen/bj_5dp"
    android:padding="@dimen/bj_5dp"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_mall_like_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/tv_item_mall_like_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/iv_item_mall_like_img"
        android:layout_alignLeft="@id/iv_item_mall_like_img"
        android:layout_alignRight="@id/iv_item_mall_like_img"
        android:singleLine="true"
        android:textColor="@color/my_color_333333"
        android:textSize="@dimen/wz_15sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_mall_like_title"
        android:layout_alignLeft="@id/iv_item_mall_like_img"
        android:layout_alignRight="@id/iv_item_mall_like_img">
        <TextView
            android:id="@+id/tv_mall_like_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/my_color_E10020"
            android:textSize="14sp"
            android:text="¥00.00"/>
        <TextView
            android:id="@+id/tv_mall_like_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/tv_mall_like_price"
            android:background="@drawable/bg_orange_brand_shape"
            android:gravity="center"
            android:text="爆款"
            android:textSize="10sp"
            android:textColor="@color/my_color_FC6B00"
            android:paddingTop="@dimen/bj_1dp"
            android:paddingBottom="@dimen/bj_1dp"
            android:paddingLeft="@dimen/bj_5dp"
            android:paddingRight="@dimen/bj_5dp"/>
    </RelativeLayout>
</RelativeLayout>