<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d77f4"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:background="#2d77f4"
            android:layout_height="45dp">

            <ImageView
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:id="@+id/iv_title_back"
                android:layout_width="22dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@drawable/white_arrow" />

            <TextView
                android:text="我是主播"
                android:id="@+id/tv_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_title_right"
                android:padding="@dimen/bj_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/bj_4dp"
                android:textColor="#ff666666"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/bj_15dp"
            android:paddingTop="@dimen/bj_15dp"
            android:paddingRight="@dimen/bj_15dp"
            android:paddingBottom="@dimen/bj_15dp">

            <ImageView
                android:id="@+id/civ_user_avatar"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bj_15dp"
                android:layout_marginRight="@dimen/bj_25dp" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_toRightOf="@+id/civ_user_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主播昵称"
                    android:textColor="#ffffffff"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tv_cout"
                    android:layout_marginTop="17dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.5 万"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>




   <LinearLayout
       android:orientation="vertical"
       android:background="#f4f4f4"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:background="@color/white"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:id="@+id/ll_more"
               android:gravity="center_vertical"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="46dp">
               <TextView
                   android:layout_weight="1"
                   android:layout_marginLeft="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="我的直播"
                   android:textColor="#ff333333"
                   android:textSize="15sp"
                   />
               <TextView
                   android:layout_marginRight="15dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="查看更多"
                   android:textColor="#ff999999"
                   android:textSize="12sp"
                   />
           </LinearLayout>
           <LinearLayout
               android:visibility="gone"
               android:id="@+id/ll_bgs"
               android:layout_marginBottom="16dp"
               android:layout_width="match_parent"
               android:layout_height="110dp">
               <FrameLayout
                   android:layout_weight="1"
                   android:visibility="gone"
                   android:id="@+id/fl_bg1"
                   android:layout_marginLeft="10dp"
                   android:layout_width="@dimen/bj_110dp"
                   android:layout_height="@dimen/bj_110dp">
                   <ImageView
                       android:id="@+id/iv_img1"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />
                   <TextView
                       android:layout_marginLeft="7dp"
                       android:layout_marginBottom="5dp"
                       android:layout_gravity="bottom"
                       android:gravity="center"
                       android:background="@drawable/shape_radius_8glod"
                       android:layout_width="36dp"
                       android:layout_height="16dp"
                       android:text="回放"
                       android:textColor="#ffffffff"
                       android:textSize="10sp"
                       />
               </FrameLayout>
               <FrameLayout
                   android:layout_weight="1"
                   android:visibility="gone"
                   android:id="@+id/fl_bg2"
                   android:layout_marginLeft="15dp"
                   android:layout_width="@dimen/bj_110dp"
                   android:layout_height="@dimen/bj_110dp">
                   <ImageView
                       android:id="@+id/iv_img2"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />
                   <TextView
                       android:layout_marginLeft="7dp"
                       android:layout_marginBottom="5dp"
                       android:layout_gravity="bottom"
                       android:gravity="center"
                       android:background="@drawable/shape_radius_8glod"
                       android:layout_width="36dp"
                       android:layout_height="16dp"
                       android:text="回放"
                       android:textColor="#ffffffff"
                       android:textSize="10sp"
                       />
               </FrameLayout>
               <FrameLayout
                   android:layout_weight="1"
                   android:visibility="gone"
                   android:layout_marginRight="10dp"
                   android:id="@+id/fl_bg3"
                   android:layout_marginLeft="15dp"
                   android:layout_width="@dimen/bj_110dp"
                   android:layout_height="@dimen/bj_110dp">
                   <ImageView
                       android:id="@+id/iv_img3"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent" />
                   <TextView
                       android:layout_marginLeft="7dp"
                       android:layout_marginBottom="5dp"
                       android:layout_gravity="bottom"
                       android:gravity="center"
                       android:background="@drawable/shape_radius_8glod"
                       android:layout_width="36dp"
                       android:layout_height="16dp"
                       android:text="回放"
                       android:textColor="#ffffffff"
                       android:textSize="10sp"
                       />
               </FrameLayout>
           </LinearLayout>
       </LinearLayout>
       <RelativeLayout
           android:layout_marginTop="5dp"
           android:background="@color/white"
           android:id="@+id/rl_lw"
           android:layout_width="match_parent"
           android:layout_height="@dimen/bj_45dp"
           android:paddingLeft="@dimen/bj_15dp"
           android:paddingRight="@dimen/bj_15dp">

           <TextView
               android:textColor="#111"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:text="礼物" />

           <TextView
               android:id="@+id/tv_user_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:drawableRight="@mipmap/arr_right"
               android:drawablePadding="@dimen/bj_15dp"
               android:text=""
               android:singleLine="true"
               android:ellipsize="end"
               android:layout_marginLeft="@dimen/bj_80dp"/>
       </RelativeLayout>


       <RelativeLayout
           android:id="@+id/rl_ds"
           android:layout_marginTop="5dp"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="@dimen/bj_45dp"
           android:paddingLeft="@dimen/bj_15dp"
           android:paddingRight="@dimen/bj_15dp">

           <TextView
               android:textColor="#111"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:text="打赏" />

           <TextView
               android:id="@+id/tv_user_phone"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:drawableRight="@mipmap/arr_right"
               android:drawablePadding="@dimen/bj_15dp"
               android:text="
" />
       </RelativeLayout>


       <RelativeLayout
           android:layout_marginTop="5dp"
           android:background="@color/white"
           android:id="@+id/rl_yj"
           android:layout_width="match_parent"
           android:layout_height="@dimen/bj_45dp"
           android:paddingLeft="@dimen/bj_15dp"
           android:paddingRight="@dimen/bj_15dp">

           <TextView
               android:textColor="#111"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:text="佣金" />

           <TextView

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:drawableRight="@mipmap/arr_right"
               android:drawablePadding="@dimen/bj_15dp"
               android:text="" />
       </RelativeLayout>

       <RelativeLayout
           android:layout_marginTop="5dp"
           android:background="@color/white"
           android:id="@+id/rl_product"
           android:layout_width="match_parent"
           android:layout_height="@dimen/bj_45dp"
           android:paddingLeft="@dimen/bj_15dp"
           android:paddingRight="@dimen/bj_15dp">

           <TextView
               android:textColor="#111"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerVertical="true"
               android:text="商品列表" />

           <TextView
               android:id="@+id/tv_sex"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:drawableRight="@mipmap/arr_right"
               android:drawablePadding="@dimen/bj_15dp"
               android:text="" />
       </RelativeLayout>
   </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5" />
</LinearLayout>