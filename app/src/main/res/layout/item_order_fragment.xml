<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_order_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp">
        <ImageView
            android:src="@drawable/moren_ren"
            android:layout_marginLeft="@dimen/bj_12dp"
            android:id="@+id/iv_img"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/bj_30dp"
            android:layout_height="@dimen/bj_30dp" />
        <TextView
            android:layout_marginLeft="52dp"
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/bj_5dp"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:textColor="@color/my_color_zs"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#F5F5F5" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_order_goods_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_49dp"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/bj_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:gravity="center"
            android:textColor="#333"
            android:text="共件商品，"
            android:textSize="14sp"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_prices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#fc6f48"
            android:text="¥"
            android:layout_marginRight="13dp"
            android:textSize="14sp"
            android:visibility="visible" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:gravity="right|center_vertical">

        <TextView
            android:id="@+id/tv_button_1"
            android:paddingTop="@dimen/bj_4dp"
            android:paddingBottom="@dimen/bj_4dp"
            android:paddingLeft="8dp"
            android:paddingRight="@dimen/bj_8dp"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bj_26dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:background="@drawable/shape_radius_14_999999"
            android:gravity="center"
            android:textColor="#333"
            android:textSize="13sp"
            android:visibility="visible" />

        <TextView
            android:paddingTop="@dimen/bj_4dp"
            android:paddingBottom="@dimen/bj_4dp"
            android:paddingLeft="14dp"
            android:paddingRight="@dimen/bj_14dp"
            android:id="@+id/tv_button_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/bj_26dp"
            android:layout_marginRight="@dimen/bj_17dp"
            android:background="@drawable/shape_radius_14_blue"
            android:gravity="center"

            android:textColor="#fff"
            android:textSize="13sp" />


    </LinearLayout>
</LinearLayout>