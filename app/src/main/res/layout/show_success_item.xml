<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="357dp"
    android:background="@drawable/shape_white_5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/bj_30dp"
        android:paddingBottom="@dimen/bj_30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换成功"
            android:textColor="#111"
            android:textSize="21sp" />

        <LinearLayout
            android:background="@drawable/dh_fail"
            android:layout_marginTop="45dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="69dp"
            android:layout_height="69dp">
         <ImageView
             android:src="@drawable/dh_success"

             android:layout_width="@dimen/bj_68dp"
             android:layout_height="@dimen/bj_68dp" />
            <!-- TextView "hddklhfkdfh_1_1" -->

        </LinearLayout>

       <LinearLayout
           android:layout_marginTop="48dp"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="恭喜你，成功兑换"
               android:textColor="#111111"
               android:textSize="15sp"
               android:gravity="left"
               />
           <TextView
               android:id="@+id/tv_exam_no_notice"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="5"
               android:textColor="#FF0000"
               android:textSize="15sp"
               android:gravity="left"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="元"
               android:textColor="#111111"
               android:textSize="15sp"
               android:gravity="left"
               />
       </LinearLayout>

        <TextView
            android:id="@+id/tv_exam_sure"
            android:layout_height="@dimen/bj_44dp"
            android:layout_width="127dp"
            android:layout_marginTop="@dimen/bj_44dp"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_20dp"
            android:background="@drawable/shape_radius_24_blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/wz_18sp"
            android:text="完成" />
    </LinearLayout>
</LinearLayout>