<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_reward_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_close_white"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_10"
        android:paddingTop="@dimen/bj_30dp"
        android:paddingBottom="@dimen/bj_30dp"
        android:layout_marginTop="@dimen/bj_20dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_reward_icon"/>

        <TextView
            android:layout_height="@dimen/bj_36dp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/bj_20dp"
            android:layout_marginLeft="@dimen/bj_30dp"
            android:layout_marginRight="@dimen/bj_30dp"
            android:gravity="center"
            android:textColor="@color/my_color_666666"
            android:textSize="@dimen/wz_16sp"
            android:text="点赞是美意，打赏是鼓励" />

        <LinearLayout
            android:id="@+id/layout_money_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_20dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/my_color_black"
                android:textSize="14sp"
                android:textStyle="bold"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
              <TextView
                 android:id="@+id/tv_money_num"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/bj_15dp"
                 android:layout_centerHorizontal="true"
                 android:text="0"
                 android:textColor="@color/my_color_black"
                 android:textSize="@dimen/wz_18sp"
                 android:textStyle="bold"/>
             <View
                 android:layout_width="@dimen/bj_80dp"
                 android:layout_height="1dp"
                 android:layout_centerHorizontal="true"
                 android:background="@color/my_color_F5F5F5"
                 android:layout_below="@id/tv_money_num"/>
            </RelativeLayout>
          </LinearLayout>

        <TextView
            android:id="@+id/tv_sj_num"
            android:layout_height="@dimen/bj_36dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_20dp"
            android:layout_marginTop="@dimen/bj_20dp"
            android:gravity="center"
            android:textColor="@color/upsdk_blue_text_007dff"
            android:textSize="@dimen/wz_14sp"
            android:text="随机金额" />

        <TextView
            android:id="@+id/tv_reward_opt"
            android:layout_height="@dimen/bj_36dp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/bj_20dp"
            android:layout_marginLeft="@dimen/bj_30dp"
            android:layout_marginRight="@dimen/bj_30dp"
            android:background="@drawable/shape_reward_btn"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/wz_16sp"
            android:text="打赏" />
    </LinearLayout>
</LinearLayout>