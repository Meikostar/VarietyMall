<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_F0F0F0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_70dp"
        android:background="@color/my_color_white">
        <ImageView
            android:id="@+id/iv_new_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_35dp"
            android:paddingLeft="@dimen/bj_15dp"
            android:paddingRight="@dimen/bj_15dp"
            android:src="@mipmap/arrow_topbar" />
        <TextView
            android:id="@+id/add_new_friend_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bj_35dp"
            android:text="新的朋友"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_18sp"/>
        <TextView
            android:id="@+id/tv_new_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/bj_35dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:text="完成"
            android:textColor="@color/my_color_E10020"
            android:textSize="14sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:background="@color/my_color_F5F5F5"/>

    <TextView
        android:id="@+id/tv_new_friend_list_three_day"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_20dp"
        android:background="@color/my_color_F0F0F0"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bj_15dp"
        android:text="近三天"
        android:textColor="@color/my_color_666666"
        android:textSize="@dimen/wz_12sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_new_friend_list_three_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_new_friend_list_three_month"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_20dp"
        android:background="@color/my_color_F0F0F0"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bj_15dp"
        android:text="三天前"
        android:textColor="@color/my_color_666666"
        android:textSize="@dimen/wz_12sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_new_friend_list_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>