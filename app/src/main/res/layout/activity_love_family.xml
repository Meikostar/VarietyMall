<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_F5F5F5">
    <com.smg.variety.view.widgets.autoview.SuperSwipeRefreshLayout
        android:id="@+id/family_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnableFooterFollowWhenLoadFinished="true">
        <com.smg.variety.view.widgets.autoview.ObservableScrollView
            android:id="@+id/family_scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <include
                    android:id="@+id/family_header"
                    layout="@layout/family_header_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.smg.variety.view.widgets.autoview.MaxRecyclerView
                    android:id="@+id/family_push_recy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bj_10dp"/>
            </LinearLayout>
        </com.smg.variety.view.widgets.autoview.ObservableScrollView>
    </com.smg.variety.view.widgets.autoview.SuperSwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_65dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:paddingTop="@dimen/bj_25dp"
        android:paddingBottom="@dimen/bj_10dp"
        android:background="@color/transparent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/family_layout_back"
                android:layout_width="@dimen/bj_50dp"
                android:layout_height="@dimen/bj_29dp"
                android:layout_alignParentLeft="true">
                <ImageView
                    android:layout_width="@dimen/bj_29dp"
                    android:layout_height="@dimen/bj_29dp"
                    android:layout_marginLeft="5dp"
                    android:padding="5dp"
                    android:src="@mipmap/ic_back_white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/family_ll_publish"
                android:layout_width="@dimen/bj_56dp"
                android:layout_height="@dimen/bj_29dp"
                android:layout_alignParentRight="true"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/my_color_white"
                    android:textSize="@dimen/wz_16sp"
                    android:paddingRight="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:text="发布"/>
            </LinearLayout>
            <TextView
                android:id="@+id/find"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/family_layout_back"
                android:layout_toStartOf="@+id/family_ll_publish"
                android:background="@drawable/consume_find_bg"
                android:drawableRight="@mipmap/ic_find"
                android:drawablePadding="13dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="请输入关键字"
                android:textColor="@color/my_color_white"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>