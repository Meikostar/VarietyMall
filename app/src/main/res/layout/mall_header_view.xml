<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_banner_mall"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_154dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color_white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/bj_10dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/bj_10dp"
            android:paddingBottom="@dimen/bj_10dp">
            <View
                android:layout_width="@dimen/bj_5dp"
                android:layout_height="@dimen/bj_20dp"
                android:layout_marginLeft="@dimen/bj_5dp"
                android:layout_marginRight="@dimen/bj_5dp"
                android:background="@color/my_color_E10020"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌推荐"
                android:textSize="@dimen/wz_16sp"
                android:textColor="@color/my_color_E10020"
                android:textStyle="bold"/>
        </LinearLayout>
        <com.smg.variety.view.widgets.autoview.NoScrollGridView
            android:id="@+id/recycle_mall_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:background="@color/my_color_white"
            android:paddingLeft="@dimen/bj_5dp"
            android:paddingRight="@dimen/bj_5dp"
            android:horizontalSpacing="@dimen/bj_1dp"
            android:numColumns="7"
            android:verticalSpacing="@dimen/bj_5dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/bj_10dp"
        android:background="@color/my_color_white">
        <View
            android:layout_width="@dimen/bj_5dp"
            android:layout_height="@dimen/bj_20dp"
            android:layout_marginLeft="@dimen/bj_5dp"
            android:layout_marginRight="@dimen/bj_5dp"
            android:background="@color/my_color_E10020"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新品驾到"
            android:textSize="@dimen/wz_16sp"
            android:textColor="@color/my_color_E10020"
            android:textStyle="bold"/>
    </LinearLayout>
    <com.smg.variety.view.widgets.autoview.NoScrollGridView
        android:id="@+id/recycle_mall_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color_white"
        android:paddingLeft="@dimen/bj_5dp"
        android:paddingRight="@dimen/bj_5dp"
        android:scrollbars="none"
        android:horizontalSpacing="@dimen/bj_1dp"
        android:numColumns="3"
        android:verticalSpacing="@dimen/bj_5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/bj_10dp"
        android:background="@color/my_color_white">
        <View
            android:layout_width="@dimen/bj_5dp"
            android:layout_height="@dimen/bj_20dp"
            android:layout_marginLeft="@dimen/bj_5dp"
            android:layout_marginRight="@dimen/bj_5dp"
            android:background="@color/my_color_E10020"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猜你喜欢"
            android:textSize="@dimen/wz_16sp"
            android:textColor="@color/my_color_E10020"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>