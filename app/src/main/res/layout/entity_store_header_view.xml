<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
     <RelativeLayout
        android:id="@+id/rl_vp_container"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <android.support.v4.view.ViewPager
            android:id="@+id/store_vp_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/my_color_F5F5F5"/>
        <LinearLayout
            android:id="@+id/store_ll_indicators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            android:visibility="visible" />
     </RelativeLayout>
    <View
        android:id="@+id/stroe_div_line_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_vp_container"
        android:layout_marginTop="@dimen/bj_5dp"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:background="@color/my_color_F5F5F5"/>
     <LinearLayout
        android:id="@+id/layout_opt_store"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:layout_below="@id/rl_vp_container"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        <RelativeLayout
            android:id="@+id/layout_all"
            android:layout_width="@dimen/bj_100dp"
            android:layout_height="match_parent"
            android:gravity="center">
           <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="@color/my_color_black"
                android:text="全部"/>
            <ImageView
                android:id="@+id/iv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_all"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_arrow_up"/>
        </RelativeLayout>
         <View
             android:id="@+id/stroe_div_line_two"
             android:layout_width="@dimen/bj_1dp"
             android:layout_height="match_parent"
             android:layout_below="@id/rl_vp_container"
             android:layout_marginTop="@dimen/bj_10dp"
             android:layout_marginBottom="@dimen/bj_10dp"
             android:background="@color/my_color_F5F5F5"/>
         <RelativeLayout
             android:id="@+id/layout_near"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <TextView
                 android:id="@+id/tv_near"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:padding="12dp"
                 android:layout_centerInParent="true"
                 android:textSize="16sp"
                 android:textColor="@color/my_color_black"
                 android:text="附近"
                 android:gravity="center" />
             <ImageView
                 android:id="@+id/iv_near"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_toRightOf="@id/tv_near"
                 android:src="@mipmap/icon_arrow_up"/>
         </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/store_div_line_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_opt_store"
        android:layout_marginTop="@dimen/bj_5dp"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:background="@color/my_color_F5F5F5"/>
</RelativeLayout>