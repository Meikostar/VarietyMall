<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
     <RelativeLayout
        android:id="@+id/rl_vp_container"
        android:layout_width="match_parent"
        android:layout_height="222dp">
         <com.youth.banner.Banner
             android:id="@+id/banner"
             android:layout_width="match_parent"
             android:layout_height="222dp"
             app:indicator_height="6dp"
             app:indicator_margin="4dp"
             app:indicator_width="6dp"

             app:image_scale_type="fit_xy"
             app:is_auto_play="true"/>
     </RelativeLayout>

     <LinearLayout
        android:id="@+id/layout_opt_store"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
         android:layout_below="@id/rl_vp_container"
        android:orientation="horizontal"
        android:gravity="center_vertical" >
        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_weight="1"

            android:layout_width="0dp"
            android:id="@+id/layout_all"
            android:layout_height="match_parent"
            android:gravity="center">
           <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_centerVertical="true"
                android:textColor="#212121"
                android:text="全部"/>
            <ImageView
                android:id="@+id/iv_all"
                android:layout_width="11dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_all"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_down"/>
        </RelativeLayout>
         <View
             android:layout_width="@dimen/bj_1dp"
             android:layout_height="match_parent"
             android:layout_below="@id/rl_vp_container"
             android:layout_marginTop="@dimen/bj_10dp"
             android:layout_marginBottom="@dimen/bj_10dp"
             android:background="@color/my_color_F5F5F5"/>
         <RelativeLayout
             android:id="@+id/layout_near"
             android:layout_weight="1"

             android:layout_width="0dp"
             android:layout_height="match_parent">
             <TextView
                 android:id="@+id/tv_near"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:padding="12dp"
                 android:layout_centerInParent="true"
                 android:textSize="16sp"
                 android:textColor="#212121"
                 android:text="附近"
                 android:gravity="center" />
             <ImageView
                 android:id="@+id/iv_near"
                 android:layout_width="11dp"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_toRightOf="@id/tv_near"
                 android:src="@drawable/arrow_down"/>
         </RelativeLayout>
         <View
             android:id="@+id/stroe_div_line_two"
             android:layout_width="@dimen/bj_1dp"
             android:layout_height="match_parent"
             android:layout_below="@id/rl_vp_container"
             android:layout_marginTop="@dimen/bj_10dp"
             android:layout_marginBottom="@dimen/bj_10dp"
             android:background="@color/my_color_F5F5F5"/>
         <RelativeLayout
             android:layout_marginRight="15dp"
             android:id="@+id/layout_sx"
             android:layout_weight="1"

             android:layout_width="0dp"
             android:layout_height="match_parent">
             <TextView
                 android:id="@+id/tv_sx"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:padding="12dp"
                 android:layout_centerInParent="true"
                 android:textSize="16sp"
                 android:textColor="#212121"
                 android:text="筛选"
                 android:gravity="center" />
             <ImageView
                 android:id="@+id/iv_sx"
                 android:layout_width="11dp"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:layout_toRightOf="@id/tv_sx"
                 android:src="@drawable/arrow_down"/>
         </RelativeLayout>
    </LinearLayout>
    <View
        android:id="@+id/store_div_line_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/layout_opt_store"
        android:layout_marginTop="@dimen/bj_5dp"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:background="@color/my_color_F5F5F5"/>
</RelativeLayout>