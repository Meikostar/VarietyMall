<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_group"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_55dp"
        android:background="@drawable/bg_divider_line"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bj_16dp"
        android:paddingRight="@dimen/bj_16dp">

        <ImageView
            android:id="@+id/tv_group_icon"
            android:layout_width="@dimen/bj_35dp"
            android:layout_height="@dimen/bj_35dp"
            android:src="@mipmap/icon_group" />

        <TextView
            android:id="@+id/tv_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textSize="@dimen/wz_16sp"
            android:singleLine="true"
            android:enabled="true"/>
    </LinearLayout>
</LinearLayout>