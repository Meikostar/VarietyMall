<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_25dp">

    <include layout="@layout/layout_title_view" />

    <View style="@style/divider_horizontal_f5f5f5_5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/bj_20dp"
        android:paddingBottom="@dimen/bj_20dp"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="@dimen/bj_97dp"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/bj_64dp" />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/iv_cover"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:singleLine="true"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/sp_16"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/bj_5dp"
            android:layout_toRightOf="@+id/iv_cover"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:singleLine="true"
            android:textColor="@color/my_color_999999"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tv_author"
            android:layout_marginTop="@dimen/bj_5dp"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:textColor="#e10020"
            android:textSize="@dimen/sp_16"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View style="@style/divider_horizontal_f5f5f5_5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/bj_20dp"
        android:layout_marginBottom="@dimen/bj_20dp"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:text="支付方式"
        android:textColor="@color/my_color_999999"
        android:textSize="@dimen/sp_14"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:background="#f5f5f5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/bj_20dp"
        android:paddingBottom="@dimen/bj_20dp"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="积分支付"
            android:textSize="@dimen/wz_15sp"
            android:textColor="@color/my_color_333333"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_collection_check_sel"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="@color/my_color_f5f5f5"
        android:layout_height="@dimen/bj_0dp" />
    <TextView
        android:id="@+id/tv_to_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_45dp"
        android:background="#E10020"
        android:gravity="center"
        android:text="立即支付"
        android:textColor="#ffffffff"
        android:textSize="17sp" />
</LinearLayout>
