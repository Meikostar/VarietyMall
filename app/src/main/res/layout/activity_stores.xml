<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="26dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/bj_10dp"
            android:paddingRight="@dimen/dp_10"
            android:src="@mipmap/arrow_topbar" />

        <TextView
            android:text="我的店铺"
            android:id="@+id/tv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="#ff333333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_title_right"
            android:padding="@dimen/bj_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/bj_4dp"
            android:textColor="#ff666666"
            android:textSize="14sp"
            android:visibility="gone" />
    </RelativeLayout>
    <com.yanzhenjie.recyclerview.swipe.widget.StickyNestedScrollView
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="93dp">

                <com.smg.variety.view.widgets.CircleImageView
                    android:layout_marginLeft="35dp"
                    android:layout_gravity="center"
                    android:id="@+id/civ_user_avatar"
                    android:layout_centerVertical="true"
                    android:layout_width="45.5dp"
                    android:layout_height="45.5dp"
                    android:src="@drawable/stores_logo"
                    app:border_color="#FFFFFF" />
                <LinearLayout
                    android:layout_centerVertical="true"
                   android:gravity="center_vertical"
                    android:layout_marginLeft="95dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺名称"
                        android:textColor="#ff6c6e74"
                        android:textSize="15sp"
                        />
                    <TextView
                        android:layout_marginTop="8dp"
                        android:id="@+id/tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申请日期：2020-04-15"
                        android:textColor="#ff999999"
                        android:textSize="10sp"
                        />
                </LinearLayout>
                <TextView
                    android:background="@drawable/carda0_regrect_line"
                    android:layout_marginTop="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="32dp"
                    android:gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="17.5dp"
                    android:text="编辑"
                    android:textColor="#ff333333"
                    android:textSize="10sp"
                    />
            </RelativeLayout>
            <android.support.v7.widget.CardView

                tools:targetApi="lollipop"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:stateListAnimator="@drawable/lift_on_touch"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_marginRight="@dimen/bj_12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                >
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="116dp">

                    <LinearLayout
                        android:layout_marginBottom="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_jy1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="今日订单"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_jy2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="昨日订单"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_jy3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="近7天订单"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_jy4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="近30天订单"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_bg"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <TextView
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="交易数据"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_below="@+id/ll_bg"
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:background="@color/my_color_line"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                tools:targetApi="lollipop"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:stateListAnimator="@drawable/lift_on_touch"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_marginRight="@dimen/bj_12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                >
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="116dp">

                    <LinearLayout
                        android:layout_marginBottom="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_dd1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待支付"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_dd2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待发货"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_dd3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已完成"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_dd4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待退款"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_bgs"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <TextView
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单管理"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_below="@+id/ll_bgs"
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:background="@color/my_color_line"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                tools:targetApi="lollipop"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:stateListAnimator="@drawable/lift_on_touch"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_marginRight="@dimen/bj_12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                >
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="116dp">

                    <LinearLayout
                        android:layout_marginBottom="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_sp1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="出售中"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_sp2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已下架"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_sp3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="已上架"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:visibility="invisible"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_bg1"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <TextView
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商品管理"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_below="@+id/ll_bg1"
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:background="@color/my_color_line"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView

                tools:targetApi="lollipop"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:stateListAnimator="@drawable/lift_on_touch"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_marginRight="@dimen/bj_12dp"
                android:layout_marginBottom="48dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                >
                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="116dp">

                    <LinearLayout
                        android:layout_marginBottom="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:gravity="bottom">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                          <LinearLayout
                              android:orientation="horizontal"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content">
                              <TextView
                                  android:layout_marginTop="1dp"
                                  android:id="@+id/tv_tz1"
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="0"
                                  android:textColor="#ff333333"
                                  android:textSize="12sp"
                                  />
                              <View
                                  android:layout_marginLeft="2dp"
                                  android:id="@+id/view_one"
                                  android:layout_width="@dimen/bj_5dp"
                                  android:layout_height="@dimen/bj_5dp"
                                  android:background="@drawable/red_circle"/>
                          </LinearLayout>

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用户咨询"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_tz2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp"
                                    />
                                <View
                                    android:layout_marginLeft="2dp"
                                    android:id="@+id/view_two"
                                    android:layout_width="@dimen/bj_5dp"
                                    android:layout_height="@dimen/bj_5dp"
                                    android:background="@drawable/red_circle"/>
                            </LinearLayout>
                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="系统通知"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_tz3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#ff333333"
                                    android:textSize="12sp"
                                    />
                                <View
                                    android:layout_marginLeft="2dp"
                                    android:id="@+id/view_three"
                                    android:layout_width="@dimen/bj_5dp"
                                    android:layout_height="@dimen/bj_5dp"
                                    android:background="@drawable/red_circle"/>
                            </LinearLayout>
                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单通知"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="invisible"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ff333333"
                                android:textSize="12sp"
                                />

                            <TextView
                                android:layout_marginTop="17dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="近30天订单"
                                android:textColor="#ff6c6e74"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_bg2"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <TextView
                            android:layout_marginLeft="12dp"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="客服咨询/通知"
                            android:textColor="#333333"
                            android:textSize="12sp"
                            />

                    </LinearLayout>
                    <View
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_below="@+id/ll_bg2"
                        android:layout_width="match_parent"
                        android:layout_height="0.4dp"
                        android:background="@color/my_color_line"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </com.yanzhenjie.recyclerview.swipe.widget.StickyNestedScrollView>

</LinearLayout>