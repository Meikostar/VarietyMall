<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">
    <include layout="@layout/layout_title_view" />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/stb_tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="#fff"
            android:layout_centerInParent="true"
            tl:tl_indicator_color="@color/my_color_1474EB"
            tl:tl_indicator_height="@dimen/bj_4dp"
            tl:tl_indicator_width_equal_title="true"
            tl:tl_tab_width="115dp"
            tl:tl_textSelectColor="@color/my_color_1474EB"
            tl:tl_textUnselectColor="#FF101010" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f5f5f5"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>