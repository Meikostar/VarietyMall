<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88.5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"


    >

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="@dimen/bj_10dp"
            android:layout_width="44dp"
            android:layout_height="44dp">

            <com.smg.variety.view.widgets.CircleImageView
                app:border_color="@color/my_color_line"
                app:border_width="0.8dp"
                android:layout_centerInParent="true"
                android:id="@+id/img_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                />
            <TextView
                android:visibility="gone"
                android:padding="1dp"
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:minWidth="14dp"
                android:layout_alignParentRight="true"

                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp" />
            <TextView
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_alignParentRight="true"
                android:id="@+id/txt_unread"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="-8dp"
                android:visibility="gone"

                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="10sp"/>
        </RelativeLayout>

        <TextView
            android:layout_marginBottom="@dimen/bj_5dp"
            android:layout_marginTop="@dimen/bj_10dp"
            android:id="@+id/txt_name"
            android:lines="1"
            android:layout_width="108dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textColor="#333"
            android:textSize="12.5sp"
            tools:text="" />
    </LinearLayout>
</LinearLayout>