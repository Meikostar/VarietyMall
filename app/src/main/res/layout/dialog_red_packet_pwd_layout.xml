<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ffffff">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_shape"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_red_packet_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_25dp"
            android:layout_marginLeft="@dimen/bj_15dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:layout_marginTop="@dimen/bj_40dp"
            android:background="@drawable/bg_white_shape"
            android:gravity="center_horizontal"
            android:hint="请输入密码"
            android:inputType="number"
            android:maxLength="6"
            android:password="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/bj_15dp"
            android:layout_marginRight="@dimen/bj_15dp"
            android:background="#b5b5b6" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/btn_confirm"
            android:layout_width="@dimen/bj_85dp"
            android:layout_height="@dimen/bj_25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/bj_20dp"
            android:layout_marginTop="@dimen/bj_20dp"
            android:text="确定" />


    </LinearLayout>
</RelativeLayout>