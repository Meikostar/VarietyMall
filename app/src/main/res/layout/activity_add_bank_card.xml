<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">

    <include layout="@layout/layout_title_view" />

    <View style="@style/divider_horizontal_f5f5f5_5" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
               >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj_20dp"
                    android:text="持卡人"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_bank_card_cardholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120dp"
                    android:background="@null"
                    android:hint="请输入持卡人姓名"
                    android:textColor="#ff333333"
                    android:textColorHint="#E8E8E8"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:background="#f5f5f5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#f5f5f5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/bj_17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj_20dp"
                    android:text="银行"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120dp"
                    android:background="@null"
                    android:hint="请输入银行名称"
                    android:textColor="#ff333333"
                    android:textColorHint="#E8E8E8"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:background="#f5f5f5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#f5f5f5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/bj_17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj_20dp"
                    android:text="卡号"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_bank_card_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120dp"
                    android:background="@null"
                    android:hint="请输入银行卡号"
                    android:textColor="#ff333333"
                    android:textColorHint="#E8E8E8"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:background="#f5f5f5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#f5f5f5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/bj_17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj_20dp"
                    android:text="支行"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_bank_sub_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120dp"
                    android:background="@null"
                    android:hint="支行信息"
                    android:textColor="#ff333333"
                    android:textColorHint="#E8E8E8"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:background="#f5f5f5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#f5f5f5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/bj_17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj_20dp"
                    android:text="手机号"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_bank_card_band_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120dp"
                    android:background="@null"
                    android:hint="请输入银行预留手机号"
                    android:textColor="#ff333333"
                    android:inputType="phone"
                    android:textColorHint="#E8E8E8"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:background="#f5f5f5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#f5f5f5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/bj_17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj_20dp"
                    android:text="图形码"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_bank_card_img_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="@dimen/bj_13dp"
                    android:layout_toLeftOf="@+id/iv_bank_card_icon_code"
                    android:background="@null"
                    android:hint="请输入图形码"
                    android:textColor="#ff333333"
                    android:textColorHint="#E8E8E8"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_bank_card_icon_code"
                    android:layout_width="@dimen/bj_81dp"
                    android:layout_height="@dimen/bj_35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bj_20dp" />

                <View
                    android:layout_width="@dimen/bj_1dp"
                    android:layout_height="@dimen/bj_23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="115dp"
                    android:background="#f5f5f5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:background="#f5f5f5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#f5f5f5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/bj_17dp"
                android:layout_marginBottom="@dimen/bj_33dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj_20dp"
                    android:text="验证码"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_bank_card_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="@dimen/bj_13dp"
                    android:layout_toLeftOf="@+id/tv_bank_card_code"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:textColor="#ff333333"
                    android:textColorHint="#E8E8E8"
                    android:textSize="16sp" />
                <TextView
                    android:background="@drawable/shape_radius_18_e10020"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/tv_bank_card_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/bj_5dp"
                    android:text="获取验证码"
                    android:textColor="#fff"
                    android:textSize="13sp" />


                <View
                    android:layout_width="@dimen/bj_1dp"
                    android:layout_height="@dimen/bj_23dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="115dp"
                    android:background="#f5f5f5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:background="#f5f5f5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#f5f5f5" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bank_card_add"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="56dp"
                    android:background="@color/my_color_zs"
                    android:gravity="center"
                    android:text="确认添加"
                    android:textColor="#ffffffff"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>