<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_news_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/bj_10dp">
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color_white"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp">

        <ImageView
            android:id="@+id/iv_one"
            android:layout_width="@dimen/bj_155dp"
            android:layout_height="@dimen/bj_95dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_one_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_one"
            android:layout_marginTop="@dimen/bj_5dp"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_toRightOf="@id/iv_one"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="健康是最大的幸福"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_16sp" />

        <TextView
            android:id="@+id/tv_one_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_one"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_toRightOf="@id/iv_one"
            android:gravity="right"
            android:text="2小时前"
            android:textColor="@color/my_color_666666"
            android:textSize="@dimen/wz_14sp" />

        <TextView
            android:id="@+id/tv_one_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@id/tv_one_time"
            android:layout_below="@id/tv_one_title"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_toRightOf="@id/iv_one"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="健康是最大的幸福健康是最大的幸福健康是最大的幸福健康是最大的幸福健康是最大的幸福健康是最大的幸福健康是最大的幸福健康是最大的幸福"
            android:textColor="@color/my_color_666666"
            android:textSize="@dimen/wz_14sp" />
    </RelativeLayout>
</LinearLayout>