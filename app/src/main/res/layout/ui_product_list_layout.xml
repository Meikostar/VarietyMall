<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/acb_status_bar"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="@color/my_color_white"
            android:paddingLeft="6dp"
            android:paddingRight="6dp" />

        <RelativeLayout

            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/actionbar_back"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:paddingRight="25dp"
                android:src="@mipmap/arrow_topbar"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_marginLeft="65dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="@dimen/bj_7dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_search_shape"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal">
                <ImageView

                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/top_search_icon"
                    android:layout_width="@dimen/bj_14dp"
                    android:layout_height="@dimen/bj_14dp"/>
                <com.smg.variety.view.widgets.autoview.ClearEditText
                    android:layout_marginRight="15dp"
                    android:paddingLeft="30dp"
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:hint="请输入搜素关键字"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textColor="@color/my_color_333333"
                    android:textSize="14sp" />


            </RelativeLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/bj_7dp"
                android:gravity="center"
                android:padding="@dimen/bj_5dp"
                android:text="搜索"
                android:textColor="#088cd6"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/iv_labe"
                android:src="@drawable/lb_s"
                android:layout_marginRight="9dp"
                android:padding="6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/bj_30dp"
                android:layout_height="@dimen/bj_28dp" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_color_EBEBEB" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_30dp"
        android:layout_marginTop="@dimen/bj_7dp"
        android:layout_marginBottom="@dimen/bj_7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_shop_product_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="综合"
            android:textColor="@drawable/text_color_radio_gray_select"
            android:textSize="@dimen/wz_15sp" />

        <TextView
            android:id="@+id/tv_shop_product_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="销量"
            android:textColor="@drawable/text_color_radio_gray_select"
            android:textSize="@dimen/wz_15sp" />

        <LinearLayout
            android:id="@+id/ll_shop_product_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shop_product_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="center"
                android:text="价格"
                android:textColor="@drawable/text_color_radio_gray_select"
                android:textSize="@dimen/wz_15sp" />

            <ImageView
                android:id="@+id/iv_shop_product_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/bj_7dp"
                android:focusable="true"
                android:src="@mipmap/arrow_defaut"
                android:tag="priceSelect" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shop_product_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_shop_product_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:gravity="center"
                android:text="筛选"
                android:textColor="@drawable/text_color_radio_gray_select"
                android:textSize="@dimen/wz_15sp" />

            <ImageView
                android:id="@+id/iv_shop_product_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/bj_7dp"
                android:focusable="true"

                android:tag="productSelect" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_color_EBEBEB" />
    <RelativeLayout
        android:background="@color/my_color_EBEBEB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/bj_12dp"
            android:id="@+id/h_scroll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_color_EBEBEB"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/bj_82dp"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <GridView
                    android:id="@+id/grid"
                    style="@style/lv_content"
                    android:layout_width="match_parent"
                    android:layout_height="153dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical" />
            </LinearLayout>

        </HorizontalScrollView>
    </RelativeLayout>


    <com.smg.variety.view.widgets.autoview.SuperSwipeRefreshLayout
        android:paddingTop="10dp"
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/my_color_EBEBEB">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recy_shop_product_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.smg.variety.view.widgets.autoview.SuperSwipeRefreshLayout>




</LinearLayout>