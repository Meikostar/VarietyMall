<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bj_66dp"
    android:background="@color/white"
    android:paddingLeft="@dimen/bj_10dp"
    android:paddingRight="@dimen/bj_10dp">
    <ImageView
        android:id="@id/iv_img"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/bj_40dp"
        android:layout_height="@dimen/bj_40dp" />
    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_img"
        android:id="@+id/rl_bg"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/bg_mine_shape_f3"

            android:layout_marginLeft="12dp"

            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="16dp"
                android:layout_height="18dp"
                android:layout_marginLeft="@dimen/bj_6dp"
                android:src="@drawable/vip_sta" />
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="掌柜"
                android:id="@+id/tv_state"
                android:textColor="#fff"
                android:textSize="12sp" />

        </LinearLayout>


    </RelativeLayout>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/my_color_999999"
        android:textSize="@dimen/wz_12sp" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/rl_bg"
        android:layout_toRightOf="@+id/iv_img"
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/my_color_999999"
        android:textSize="@dimen/wz_12sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#EEEEEE"/>
</RelativeLayout>
