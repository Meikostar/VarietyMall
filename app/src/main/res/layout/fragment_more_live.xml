<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/stb_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff"
        tl:tl_indicator_color="@color/my_color_1474EB"
        tl:tl_indicator_height="@dimen/bj_4dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_width="95dp"
        tl:tl_textSelectColor="@color/my_color_1474EB"
        tl:tl_textUnselectColor="#999999" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_action"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>