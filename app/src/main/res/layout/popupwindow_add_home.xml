<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/bj_150dp"
        android:layout_height="@dimen/bj_205dp"
        android:background="@mipmap/popwindow_bg"
        android:layout_marginRight="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_2dp"
        android:paddingTop="@dimen/bj_5dp"
        android:paddingBottom="@dimen/bj_5dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/re_scan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_50dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/pop_scan"
                android:drawablePadding="10dp"
                android:layout_centerInParent="true"
                android:text="扫一扫"
                android:textColor="@color/my_color_white"
                android:textSize="16sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:layout_height="0.5dp"
            android:background="@color/my_color_F5F5F5"/>
        <RelativeLayout
            android:id="@+id/re_cart"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_50dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_cart"
                android:drawablePadding="10dp"
                android:layout_centerInParent="true"
                android:text="购物车"
                android:textColor="@color/my_color_white"
                android:textSize="16sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:layout_height="0.5dp"
            android:background="@color/my_color_F5F5F5"/>
        <RelativeLayout
            android:id="@+id/re_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_50dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/pop_code"
                android:drawablePadding="20dp"
                android:layout_centerInParent="true"
                android:text="推广码"
                android:textColor="@color/my_color_white"
                android:textSize="16sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:layout_height="0.5dp"
            android:background="@color/my_color_F5F5F5"/>
        <RelativeLayout
            android:id="@+id/re_entrance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_50dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="18dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_public_donation"
                android:drawablePadding="10dp"
                android:layout_centerInParent="true"
                android:text="预留入口"
                android:textColor="@color/my_color_white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>