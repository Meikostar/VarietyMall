<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_FFFFFF"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/bg_topic_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/topic_tab"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/my_color_white"
        app:tabIndicatorColor="@color/my_color_666666"
        app:tabIndicatorHeight="0dp"
        app:tabSelectedTextColor="@color/my_color_E10020"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearanceInverse"
        app:tabTextColor="@color/my_color_666666" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_20dp"
        android:background="@color/my_color_F5F5F5"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/topic_fragmentViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />
</LinearLayout>