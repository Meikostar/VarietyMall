<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_family_like"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/bj_5dp"
    android:layout_marginRight="@dimen/bj_5dp"
    android:layout_marginTop="@dimen/bj_5dp"
    android:padding="@dimen/bj_5dp"
    android:background="@color/my_color_white">
    <ImageView
        android:id="@+id/iv_family_brand"
        android:layout_width="180dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/tv_family_brand"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bj_30dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/iv_family_brand"
        android:layout_alignLeft="@id/iv_family_brand"
        android:layout_alignRight="@id/iv_family_brand"
        android:text="秋天休闲时尚女式装"
        android:textColor="@color/my_color_black"
        android:textSize="12sp" />
    <LinearLayout
        android:id="@+id/layout_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tv_family_brand"
        android:layout_alignLeft="@id/iv_family_brand"
        android:layout_alignRight="@id/iv_family_brand">
        <TextView
            android:id="@+id/tv_item_family_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/my_color_E10020"
            android:textSize="@dimen/wz_15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="积分"
            android:singleLine="true"
            android:textColor="@color/my_color_E10020"
            android:textSize="@dimen/wz_15sp" />
    </LinearLayout>
    <View
        android:id="@+id/family_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:background="@color/my_color_f5f5f5"
        android:layout_below="@id/layout_integral"
        android:layout_alignLeft="@id/layout_integral"
        android:layout_alignRight="@id/layout_integral"
        android:layout_margin="@dimen/bj_5dp"/>
    <RelativeLayout
        android:id="@+id/layout_like_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/family_line"
        android:layout_alignLeft="@id/family_line"
        android:layout_alignRight="@id/family_line">
        <ImageView
            android:id="@+id/iv_item_family_head"
            android:layout_width="@dimen/bj_26dp"
            android:layout_height="@dimen/bj_26dp"
            android:src="@mipmap/ic_head_img"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_item_family_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_item_family_head"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/bj_5dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="hahahah"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/wz_12sp" />
    </RelativeLayout>
</RelativeLayout>