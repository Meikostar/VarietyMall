<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">

    <include layout="@layout/layout_title_view" />

    <View style="@style/divider_horizontal_f5f5f5_5" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_55dp"
        android:paddingLeft="@dimen/bj_10dp"
        android:visibility="gone"
        android:paddingRight="@dimen/bj_10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/arr_right"
            android:text="修改个人信息"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <View
            style="@style/divider_horizontal_f5f5f5_5"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_linker"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_55dp"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/arr_right"
            android:text="关注用户列表"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <View
            style="@style/divider_horizontal_f5f5f5_5"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_55dp"
        android:visibility="gone"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/arr_right"
            android:text="查看个人信息"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <View
            style="@style/divider_horizontal_f5f5f5_5"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_score"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_55dp"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/arr_right"
            android:text="积分收入"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <View
            style="@style/divider_horizontal_f5f5f5_5"
            android:layout_height="@dimen/bj_1dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>