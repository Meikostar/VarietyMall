<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:src="@drawable/shape_white_f2"
        android:layout_width="match_parent"
        android:layout_height="160dp" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">


        <RelativeLayout

            android:layout_marginTop="75dp"
            android:id="@+id/rl_vp_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                app:indicator_height="6dp"
                app:indicator_margin="4dp"
                app:indicator_width="6dp"

                app:image_scale_type="fit_xy"
                app:is_auto_play="true"/>

            <LinearLayout
                android:background="@color/white"
                android:layout_marginTop="126dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.smg.variety.view.widgets.autoview.NoScrollGridView
                    android:id="@+id/grid_content"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:background="#f2f2f2"
                    android:listSelector="@color/transparent"
                    android:numColumns="5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" />
                <HorizontalScrollView
                    android:background="#f2f2f2"
                    android:layout_width="fill_parent"
                    android:layout_height="138dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="165dp"
                        android:layout_marginTop="3dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <GridView
                            android:id="@+id/grid"
                            style="@style/lv_content"
                            android:background="#f2f2f2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:gravity="center_vertical" />
                    </LinearLayout>

                </HorizontalScrollView>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:background="#f2f2f2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_marginRight="@dimen/bj_12dp"
                android:layout_marginTop="@dimen/bj_11dp"
                android:id="@+id/card_1"
                tools:targetApi="lollipop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_86dp"
                android:clickable="false"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="3dp"
                app:cardElevation="0dp"

                app:cardBackgroundColor="#f2f2f2">
                <ImageView

                    android:id="@+id/iv_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="fitXY"/>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:background="#f2f2f2"
                android:layout_marginRight="@dimen/bj_12dp"
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_marginTop="@dimen/bj_11dp"
                android:layout_width="match_parent"
                android:layout_height="184dp"
                android:orientation="horizontal">
                <android.support.v7.widget.CardView
                    android:layout_weight="1"
                    tools:targetApi="lollipop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="3dp"
                    app:cardBackgroundColor="#f2f2f2"
                    app:cardUseCompatPadding="false"
                    app:cardPreventCornerOverlap="false">
                    <ImageView
                        android:id="@+id/iv_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:scaleType="fitXY"/>
                </android.support.v7.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="184dp"
                    android:layout_marginLeft="@dimen/bj_12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <android.support.v7.widget.CardView
                        app:cardBackgroundColor="#f2f2f2"
                        tools:targetApi="lollipop"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_86dp"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="0dp">
                        <ImageView

                            android:id="@+id/iv_three"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/bj_86dp"
                            android:scaleType="fitXY" />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_marginTop="11dp"
                        tools:targetApi="lollipop"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/bj_86dp"
                        app:cardCornerRadius="3dp"
                        app:cardUseCompatPadding="false"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#f2f2f2"
                        app:cardPreventCornerOverlap="false">
                        <ImageView
                            android:id="@+id/iv_four"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY" />
                    </android.support.v7.widget.CardView>



                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_marginTop="@dimen/bj_19dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="115dp"
                android:layout_height="@dimen/bj_16dp"
                android:src="@drawable/home_8"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="@dimen/bj_12dp"
                android:layout_marginRight="@dimen/bj_12dp"
                android:layout_marginTop="@dimen/bj_11dp"
                tools:targetApi="lollipop"
                android:layout_width="match_parent"
                android:layout_height="127dp"
                android:clickable="true"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#f2f2f2"
                app:cardCornerRadius="3dp">
                <ImageView
                    android:id="@+id/iv_five"
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:scaleType="fitXY"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
