<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/header_top_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/my_color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:layout_marginBottom="10dp"
            android:background="@color/my_color_white">

            <ImageView
                android:padding="3dp"
                android:src="@drawable/back_arrow"
                android:visibility="visible"
                android:id="@+id/iv_calss_top_sweep"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:id="@+id/top_search_view"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_toLeftOf="@+id/iv_top_message"
                android:layout_toRightOf="@+id/iv_calss_top_sweep"
                android:background="@drawable/bg_search_shape"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:src="@mipmap/top_search_icon" />

                <TextView
                    android:id="@+id/et_search_str"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="18dp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="请输入关键字"
                    android:imeOptions="actionSearch"
                    android:singleLine="true"
                    android:textColor="@color/my_color_333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_top_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_one"
            android:layout_width="@dimen/bj_86dp"
            android:layout_height="match_parent"
            android:background="@color/my_color_white" />

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_ad"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_90dp"
                android:src="@drawable/moren_fldb"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:layout_marginRight="@dimen/bj_10dp"
                android:layout_marginTop="@dimen/bj_10dp" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:id="@+id/rv_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>