<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bj_63dp">

    <ImageView
        android:id="@+id/iv_red_point"
        android:layout_width="@dimen/bj_6dp"
        android:layout_height="@dimen/bj_6dp"
        android:src="@drawable/shape_red_point"
        android:visibility="gone" />

    <com.smg.variety.view.widgets.CircleImageView
        android:id="@+id/iv_collect_community_icon"
        android:layout_width="@dimen/bj_43dp"
        android:layout_height="@dimen/bj_43dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/bj_5dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_collect_community_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_toRightOf="@+id/iv_collect_community_icon"
        android:textColor="#ff000000"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:background="#EEEEEE" />
</RelativeLayout>