<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/bj_23dp"
    android:orientation="vertical">

    <include layout="@layout/layout_title_view" />

    <View style="@style/divider_horizontal_f5f5f5_5"
        android:layout_height="@dimen/bj_1dp"/>

  <ScrollView
      android:background="@color/my_color_F5F5F5"
      android:scrollbars="none"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <RelativeLayout

          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <LinearLayout
              android:layout_marginBottom="50dp"
              android:layout_centerHorizontal="true"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
              <LinearLayout
                  android:layout_marginTop="@dimen/bj_30dp"
                  android:layout_centerHorizontal="true"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:id="@+id/iv_img"
                      android:layout_width="@dimen/bj_46dp"
                      android:layout_height="@dimen/bj_46dp" />
                  <LinearLayout
                      android:layout_marginLeft="12dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <TextView
                          android:id="@+id/tv_name"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=""
                          android:textColor="@color/my_color_333333"
                          android:textSize="@dimen/wz_16sp" />
                      <TextView

                          android:id="@+id/tv_tgm"
                          android:layout_marginTop="@dimen/bj_5dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="邀请码:"
                          android:textColor="@color/my_color_333333"
                          android:textSize="@dimen/wz_14sp" />
                  </LinearLayout>

              </LinearLayout>


              <LinearLayout
                  android:layout_marginTop="16dp"
                  android:id="@+id/ll_code"
                  android:background="@color/white"
                  android:layout_width="282dp"
                  android:layout_height="282dp"
                  android:layout_centerInParent="true"
                  android:gravity="center"
                  android:orientation="vertical">



                  <ImageView
                      android:id="@+id/img_qrcode"
                      android:layout_width="266dp"
                      android:layout_height="266dp"
                      android:src="@mipmap/img_default_1" />





              </LinearLayout>
              <TextView
                  android:layout_marginTop="14dp"
                  android:layout_marginBottom="26dp"
                  android:layout_gravity="center_horizontal"

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="扫一扫，一起享实惠"
                  android:textColor="@color/my_color_333333" />

              <LinearLayout
                  android:layout_below="@+id/ll_code"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/bj_39dp"
                  android:orientation="horizontal"


                  android:gravity="center">
                  <LinearLayout
                      android:id="@+id/ll_save"
                      android:gravity="center"
                      android:background="@drawable/shape_regle_zs"
                      android:orientation="horizontal"
                      android:layout_width="129dp"
                      android:layout_height="match_parent">
                      <ImageView
                          android:src="@drawable/mine_save"
                          android:layout_marginRight="4dp"
                          android:layout_width="@dimen/bj_14dp"
                          android:layout_height="@dimen/bj_13dp" />
                      <TextView
                          android:id="@+id/btn_save_qcode"
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/bj_39dp"
                          android:gravity="center"
                          android:text="保存二维码"
                          android:textColor="@color/white" />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/ll_share"
                      android:layout_marginLeft="@dimen/bj_23dp"
                      android:gravity="center"
                      android:background="@drawable/shape_regle_zs"
                      android:orientation="horizontal"
                      android:layout_width="129dp"
                      android:layout_height="match_parent">
                      <ImageView
                          android:src="@drawable/mine_share"
                          android:layout_marginRight="4dp"
                          android:layout_width="@dimen/bj_14dp"
                          android:layout_height="@dimen/bj_13dp" />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="@dimen/bj_39dp"
                          android:gravity="center"
                          android:text="分享给好友"
                          android:textColor="@color/white" />
                  </LinearLayout>
              </LinearLayout>
          </LinearLayout>


      </RelativeLayout>
  </ScrollView>


</LinearLayout>