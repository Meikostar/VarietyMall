<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="66dp">

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_message_icon"
        android:layout_width="@dimen/bj_39dp"
        android:layout_height="@dimen/bj_39dp"
        android:src="@mipmap/system_message" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_message_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignRight="@+id/iv_message_icon"
        android:src="@drawable/shape_red_point" />

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/tv_message_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iv_message_icon"
        android:text=""
        android:textColor="#ff212121"
        android:textSize="16sp" />

    <TextView
        android:layout_marginTop="39dp"
        android:id="@+id/tv_message_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_message_icon"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/iv_message_icon"
        android:text=""
        android:textColor="#ff4b4b4b"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_message_type"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="9dp"
        android:text=""
        android:textColor="#ff999999"
        android:textSize="12sp" />
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_color_line"/>
</RelativeLayout>