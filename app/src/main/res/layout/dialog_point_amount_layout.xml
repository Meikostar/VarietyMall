<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingTop="@dimen/bj_20dp"
        android:paddingBottom="@dimen/bj_20dp"
        android:text="请选择打赏积分金额"
        android:textColor="@color/my_color_333333" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/bj_15dp"
        android:paddingTop="@dimen/bj_20dp"
        android:paddingBottom="@dimen/bj_20dp"
        android:text="自定义积分金额"
        android:textColor="@color/my_color_333333" />

    <EditText
        android:id="@+id/et_point_amount"
        android:layout_width="230dp"
        android:layout_height="@dimen/bj_40dp"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:inputType="numberDecimal"
        android:background="@drawable/dialog_point_amount_shape"
        android:hint="输入打赏积分金额"
        android:paddingLeft="@dimen/bj_14dp"
        android:textColorHint="@color/my_color_999999"
        android:textSize="@dimen/wz_14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:layout_marginTop="@dimen/bj_20dp">

        <Button
            android:id="@+id/no"
            android:layout_width="@dimen/bj_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="#767676"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/yes"
            android:layout_width="@dimen/bj_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e10020"
            android:gravity="center"
            android:text="立即支付"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>
</LinearLayout>