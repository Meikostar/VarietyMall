<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">

    <include

        layout="@layout/layout_title_view" />

    <View style="@style/divider_horizontal_f5f5f5_5" />

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/message_xt"
            android:layout_width="@dimen/bj_36dp"
            android:layout_height="@dimen/bj_36dp"
            android:layout_marginLeft="@dimen/bj_13dp" />

        <LinearLayout
            android:id="@+id/ll_xt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_72dp"
            android:layout_marginLeft="@dimen/bj_12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统消息"
                android:textColor="#333333"
                android:textSize="15sp" />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统平台积分累计规则调整通知"
                android:textColor="#666666"
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_1dp"
        android:layout_marginLeft="12dp"
        android:background="@color/my_color_line"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_66dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/message_dd"
            android:layout_width="@dimen/bj_36dp"
            android:layout_height="@dimen/bj_36dp"
            android:layout_marginLeft="@dimen/bj_13dp" />

        <LinearLayout
            android:id="@+id/ll_dd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_72dp"
            android:layout_marginLeft="@dimen/bj_12dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单通知"
                android:textColor="#333333"
                android:textSize="15sp" />
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单状态随时掌控"
                android:textColor="#666666"
                android:textSize="13sp"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_height="match_parent"
        style="@style/divider_horizontal_f5f5f5_5" />

</LinearLayout>