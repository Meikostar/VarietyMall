<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical"
    android:paddingBottom="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_dianpu_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_40dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/bj_10dp"
        android:drawableLeft="@mipmap/order_store"
        android:drawablePadding="@dimen/bj_10dp"
        android:text="自营店铺"
        android:textColor="@color/my_color_838383"
        android:textSize="@dimen/wz_14sp" />
    </LinearLayout>
    <com.smg.variety.view.widgets.autoview.MaxRecyclerView
        android:id="@+id/recy_confirm_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp"
        android:focusable="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/my_color_f5f5f5"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:paddingTop="@dimen/bj_5dp"
        android:paddingBottom="@dimen/bj_5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="商品总价"
            android:textColor="@color/my_color_ff666666"
            android:textSize="@dimen/wz_15sp" />
        <TextView
            android:id="@+id/tv_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="00.00"
            android:textColor="@color/my_color_ff666666"
            android:textSize="@dimen/wz_15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:paddingTop="@dimen/bj_5dp"
        android:paddingBottom="@dimen/bj_5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="运费(快递)"
            android:textColor="@color/my_color_ff666666"
            android:textSize="@dimen/wz_15sp" />
        <TextView
            android:id="@+id/tv_kuaidi_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="00.00"
            android:textColor="@color/my_color_ff666666"
            android:textSize="@dimen/wz_15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:paddingTop="@dimen/bj_5dp"
        android:paddingBottom="@dimen/bj_5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="优惠券"
            android:textColor="@color/my_color_ff666666"
            android:textSize="@dimen/wz_15sp" />
        <TextView
            android:id="@+id/tv_youhuijuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="¥0.00"
            android:textColor="@color/my_color_ff666666"
            android:textSize="@dimen/wz_13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:paddingTop="@dimen/bj_5dp"
        android:paddingBottom="@dimen/bj_5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="现金券"
            android:textColor="@color/my_color_ff666666"
            android:textSize="@dimen/wz_15sp" />
        <TextView
            android:id="@+id/tv_xianjinjuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="¥0.00"
            android:textColor="@color/my_color_ff666666"
            android:textSize="@dimen/wz_13sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/my_color_f5f5f5"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:paddingTop="@dimen/bj_5dp"
        android:paddingBottom="@dimen/bj_5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:text="订单备注"
            android:textColor="@color/my_color_ff666666"
            android:textSize="@dimen/wz_15sp" />
        <EditText
            android:background="@null"
            android:layout_centerVertical="true"
            android:id="@+id/et_beizhu"
            android:layout_width="match_parent"
            android:lines="1"
            android:layout_height="25dp"
            android:layout_marginLeft="75dp"
            android:gravity="left|center_vertical"
            android:hint="备注"
            android:textColorHint="@color/my_color_999999"
            android:textColor="@color/my_color_333333"
            android:textSize="@dimen/wz_13sp" />
    </RelativeLayout>
    <View
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentTop="true"
        android:background="@color/my_color_f5f5f5"/>
</LinearLayout>