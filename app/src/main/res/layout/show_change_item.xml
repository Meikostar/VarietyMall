<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="357dp"
    android:background="@drawable/shape_white_5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/bj_30dp"
        android:paddingBottom="@dimen/bj_30dp"

        android:orientation="vertical">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="兑换金币"
            android:textColor="#111"
            android:textSize="21sp" />
        <LinearLayout
            android:layout_marginTop="35dp"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="输入个数"
                android:textColor="#ff333333"
                android:textSize="12sp"
                />
            <RelativeLayout
                android:layout_marginRight="65dp"
                android:layout_marginLeft="22dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <EditText
                    android:hint="请输入兑换数量"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:id="@+id/et_cout"
                    android:inputType="number"
                    android:textSize="17sp"
                    android:textColor="#111"
                    android:layout_width="match_parent"
                    android:layout_height="38dp" />
                <TextView
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
                <View
                    android:layout_below="@+id/et_cout"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/my_color_line"/>
            </RelativeLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_use"
            android:layout_marginLeft="82dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用1250个"
            android:textColor="#ffff0000"
            android:textSize="10sp"
            />
        <LinearLayout
            android:layout_marginTop="15dp"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换金额"
                android:textColor="#ff333333"
                android:textSize="12sp"
                />
            <RelativeLayout
                android:layout_marginRight="65dp"
                android:layout_marginLeft="22dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:textColor="#111"
                   android:layout_marginTop="5dp"

                    android:id="@+id/et_couts"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="38dp" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
                <View
                    android:layout_below="@+id/et_couts"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/my_color_line"/>
            </RelativeLayout>

        </LinearLayout>



       <LinearLayout
           android:layout_marginTop="60dp"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:layout_width="match_parent"
           android:layout_height="@dimen/bj_45dp">
           <TextView
               android:id="@+id/tv_cancel"
               android:layout_height="@dimen/bj_44dp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_marginLeft="@dimen/bj_20dp"
               android:layout_marginRight="@dimen/bj_20dp"
               android:background="@drawable/shape_radius_24_blue"
               android:gravity="center"
               android:textColor="@color/white"
               android:textSize="@dimen/wz_18sp"
               android:text="取消" />
           <TextView
               android:id="@+id/tv_sure"
               android:layout_height="@dimen/bj_44dp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_marginRight="@dimen/bj_20dp"
               android:background="@drawable/shape_radius_24_blue"
               android:gravity="center"
               android:textColor="@color/white"
               android:textSize="@dimen/wz_18sp"
               android:text="兑换" />
       </LinearLayout>

    </LinearLayout>
</LinearLayout>