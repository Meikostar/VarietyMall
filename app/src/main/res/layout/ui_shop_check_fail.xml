<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_10dp"
        android:background="@color/my_color_f5f5f5"/>

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@mipmap/icon_live_fail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bj_20dp"
        android:text="抱歉，开店审核失败!"
        android:textColor="@color/my_color_333333" />

    <TextView
        android:id="@+id/tv_fail_reason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bj_20dp"
        android:textColor="@color/my_color_333333" />

    <TextView
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_43dp"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginRight="@dimen/bj_15dp"
        android:layout_marginTop="@dimen/bj_50dp"
        android:background="@drawable/shape_radius_5_e10020"
        android:gravity="center"
        android:text="重新提交"
        android:textColor="#ffffffff"
        android:textSize="16sp" />
</LinearLayout>