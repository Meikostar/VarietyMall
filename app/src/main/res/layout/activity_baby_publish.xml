<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_24dp">
    <include layout="@layout/layout_title_view"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/my_color_f5f5f5">
        <View
         android:layout_width="match_parent"
         android:layout_height="@dimen/bj_10dp"
         android:background="@color/my_color_F5F5F5"/>
       <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/my_color_FFFFFF"
          android:paddingTop="@dimen/bj_15dp"
          android:paddingBottom="@dimen/bj_15dp"
          android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前定位:"
            android:paddingLeft="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_12sp"/>
          <RelativeLayout
              android:id="@+id/layout_location"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/bj_10dp"
              android:layout_toRightOf="@+id/iv_entity_store"
              android:layout_below="@id/tv_entity_store_name">
              <ImageView
                  android:layout_width="@dimen/bj_16dp"
                  android:layout_height="@dimen/bj_16dp"
                  android:layout_centerVertical="true"
                  android:layout_alignParentLeft="true"
                  android:src="@mipmap/ic_location_red"/>
              <TextView
                  android:id="@+id/tv_entity_store_location"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/iv_shop_detail_location"
                  android:layout_marginLeft="@dimen/bj_20dp"
                  android:text="广东省/深圳市/南山区"
                  android:textColor="@color/my_color_black"
                  android:textSize="14sp"/>
          </RelativeLayout>
          </LinearLayout>
          <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_10dp"
            android:background="@color/my_color_F5F5F5"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/my_color_FFFFFF"
              android:paddingBottom="@dimen/bj_10dp">
             <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="添加宝贝图片:"
               android:paddingLeft="@dimen/dp_10"
               android:paddingTop="@dimen/bj_10dp"
               android:textColor="@color/my_color_black"
               android:textSize="@dimen/wz_12sp"/>
             <android.support.v7.widget.RecyclerView
               android:id="@+id/recy_view"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="@dimen/bj_10dp"
               android:paddingRight="@dimen/bj_10dp"
               android:background="@color/my_color_FFFFFF"/>
           </LinearLayout>
           <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/bj_10dp"
             android:background="@color/my_color_F5F5F5"/>
            <RelativeLayout
                android:id="@+id/layout_product_type"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingLeft="@dimen/bj_5dp"
                android:paddingRight="@dimen/bj_5dp"
                android:layout_height="@dimen/bj_44dp">
                <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="@dimen/bj_5dp"
                     android:text="商品类型"
                     android:textColor="@color/my_color_black"
                     android:textSize="@dimen/wz_14sp"/>
                <TextView
                    android:id="@+id/tv_product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/bj_10dp"
                    android:drawableRight="@mipmap/arr_right"
                    android:drawablePadding="@dimen/bj_10dp"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/wz_14sp"
                    android:textColor="@color/my_color_666666" />
            </RelativeLayout>
          <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_10dp"
            android:background="@color/my_color_F5F5F5"/>
          <RelativeLayout
            android:id="@+id/layout_product_price"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:paddingLeft="@dimen/bj_5dp"
            android:paddingRight="@dimen/bj_5dp"
            android:layout_height="@dimen/bj_44dp">
             <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bj_5dp"
                android:text="开个价"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_14sp"/>
              <EditText
                 android:id="@+id/et_product_price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:background="@color/my_color_white"
                 android:layout_centerVertical="true"
                 android:hint="0.00"
                 android:textColor="@color/my_color_black"
                 android:textSize="@dimen/wz_14sp"/>
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="@dimen/bj_5dp"
                  android:layout_toLeftOf="@id/et_product_price"
                  android:text="售价"
                  android:textColor="@color/my_color_black"
                  android:textSize="@dimen/wz_14sp"/>
          </RelativeLayout>
          <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_10dp"
            android:background="@color/my_color_F5F5F5"/>
          <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:paddingLeft="@dimen/bj_5dp"
            android:paddingRight="@dimen/bj_5dp"
            android:layout_height="@dimen/bj_44dp">
            <TextView
                android:id="@+id/tv_product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bj_5dp"
                android:text="商品标题"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_14sp"/>
            <EditText
                android:id="@+id/et_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_product_title"
                android:layout_marginLeft="@dimen/bj_20dp"
                android:background="@color/my_color_white"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_14sp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_10dp"
            android:background="@color/my_color_F5F5F5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/my_color_FFFFFF">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品详情:"
                android:paddingLeft="@dimen/dp_10"
                android:paddingTop="@dimen/bj_10dp"
                android:paddingBottom="@dimen/dp_10"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_12sp"/>
           <EditText
                android:id="@+id/ed_content"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/my_color_FFFFFF"
                android:gravity="left|top"
                android:hint="想说点什么..."
                android:padding="@dimen/bj_10dp"
                android:textColorHint="@color/my_color_999999"
                android:textSize="@dimen/wz_14sp" />
           </LinearLayout>
           <TextView
              android:id="@+id/tv_publish"
              android:layout_width="match_parent"
              android:layout_height="@dimen/bj_43dp"
              android:layout_marginLeft="@dimen/bj_15dp"
              android:layout_marginTop="@dimen/bj_20dp"
              android:layout_marginBottom="@dimen/bj_20dp"
              android:layout_marginRight="@dimen/bj_15dp"
              android:clickable="true"
              android:background="@drawable/shape_radius_5_e10020"
              android:gravity="center"
              android:text="发布"
              android:textColor="#ffffffff"
              android:textSize="16sp" />
       </LinearLayout>
    </ScrollView>
</LinearLayout>