<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="28dp">

    <include layout="@layout/layout_title_view" />

    <View
        style="@style/divider_horizontal_f5f5f5_5"
        android:layout_height="@dimen/bj_10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginTop="@dimen/bj_20dp"
        android:layout_marginBottom="@dimen/bj_20dp"
        android:text="反馈类型"
        android:textColor="#ff333333"
        android:textSize="15sp" />

    <com.smg.variety.view.widgets.NoScrollGridView
        android:id="@+id/gv_feedback_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/bj_10dp"
        android:horizontalSpacing="@dimen/bj_15dp"
        android:numColumns="4"
        android:verticalSpacing="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/bj_20dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_radius_3_f5f5f5">

        <EditText
            android:id="@+id/et_feedback_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_feedback_content_num"
            android:background="@null"
            android:gravity="top|start"
            android:hint="请输入反馈，我们将为您不断改进…"
            android:maxLength="200"
            android:paddingLeft="@dimen/bj_10dp"
            android:paddingTop="@dimen/bj_10dp"
            android:paddingRight="@dimen/bj_10dp"
            android:paddingBottom="@dimen/bj_5dp"
            android:textColor="#666666"
            android:textColorHint="#ff999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_feedback_content_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/bj_8dp"
            android:layout_marginBottom="@dimen/bj_5dp"
            android:text="0/200"
            android:textColor="#ff999999"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="@dimen/bj_44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="@dimen/bj_36dp"
        android:background="@drawable/login_blue"
        android:gravity="center"
        android:text="提交"
        android:textColor="#ffffffff"
        android:textSize="17sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5" />
</LinearLayout>