<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="357dp"
    android:background="@drawable/shape_white_5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/bj_30dp"
        android:paddingBottom="@dimen/bj_30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信专属导师"
            android:textColor="#009aff"
            android:textSize="18sp" />

       <LinearLayout
           android:paddingLeft="15dp"
           android:paddingRight="15dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_notice_content"
               android:layout_marginTop="38dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="您的专属导师微信号："
               android:textColor="#111111"
               android:textSize="15sp"
               android:gravity="left"
               />

           <!-- TextView "hddklhfkdfh_1_1" -->
           <TextView
               android:id="@+id/tv_exam_no_notice"
               android:layout_marginTop="28dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="关于省钱赚钱的问题，请复制微信号去微信添加好友资讯吧~"
               android:textColor="#111111"
               android:textSize="15sp"
               android:gravity="left"
               />
       </LinearLayout>



        <TextView
            android:id="@+id/tv_exam_sure"
            android:layout_height="@dimen/bj_44dp"
            android:layout_width="214dp"
            android:layout_marginTop="@dimen/bj_100dp"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_20dp"
            android:background="@drawable/shape_radius_24_blue"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/wz_14sp"
            android:text="复制微信" />
    </LinearLayout>
</LinearLayout>