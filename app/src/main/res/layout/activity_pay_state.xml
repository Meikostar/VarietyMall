<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/bj_23dp"
    android:orientation="vertical">

    <include layout="@layout/layout_title_view" />

    <View style="@style/divider_horizontal_f5f5f5_5"
        android:layout_height="@dimen/bj_1dp"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginBottom="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_marginTop="@dimen/bj_50dp"
                android:id="@+id/img_qrcode"
                android:layout_width="126dp"
                android:layout_height="117dp"
                android:src="@drawable/pay_success" />
            <TextView
                android:id="@+id/tv_state"
                android:layout_marginTop="19dp"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/wz_18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="支付成功"
                android:textColor="@color/my_color_333333" />
            <TextView
                android:layout_marginTop="16dp"
                android:layout_marginBottom="26dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="商家将尽快发货，请耐心等待"
                android:textColor="#979797" />
            <LinearLayout
                android:layout_below="@+id/ll_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bj_33dp"
                android:orientation="horizontal"


                android:gravity="center">
                <LinearLayout
                    android:id="@+id/ll_look"
                    android:gravity="center"
                    android:background="@drawable/black_regle_bg"
                    android:orientation="horizontal"
                    android:layout_width="113dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/btn_save_qcode"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/bj_39dp"
                        android:gravity="center"
                        android:text="查看订单"
                        android:textColor="@color/my_color_333333" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_marginLeft="@dimen/bj_67dp"
                    android:gravity="center"
                    android:background="@drawable/shape_regle_zs"
                    android:orientation="horizontal"
                    android:layout_width="113dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_back"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/bj_39dp"
                        android:gravity="center"
                        android:text="返回首页"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>