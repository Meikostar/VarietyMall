<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_F0F0F0">

    <RelativeLayout
        android:id="@+id/ta_home_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_70dp"
        android:background="@color/my_color_white">

        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_35dp"
            android:paddingLeft="@dimen/bj_15dp"
            android:paddingRight="@dimen/bj_15dp"
            android:src="@mipmap/arrow_topbar" />

        <TextView
            android:id="@+id/ta_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/bj_35dp"
            android:text="聊天信息"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ta_home_top_layout"
        android:background="@color/my_color_white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_80dp"
            android:layout_marginTop="@dimen/bj_15dp"
            android:background="@color/my_color_white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_ta_home_user_icon"
                android:layout_width="@dimen/bj_70dp"
                android:layout_height="@dimen/bj_70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/bj_10dp" />

            <TextView
                android:id="@+id/iv_ta_home_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/iv_ta_home_user_icon"
                android:layout_marginLeft="@dimen/bj_15dp"
                android:layout_marginTop="@dimen/bj_5dp"
                android:layout_toRightOf="@id/iv_ta_home_user_icon"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/mark_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/bj_10dp"
                android:layout_toRightOf="@id/iv_ta_home_user_icon"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/iv_ta_home_user_mname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_15dp"
                    android:textColor="@color/my_color_999999"
                    android:textSize="@dimen/wz_12sp" />

                <TextView
                    android:id="@+id/iv_ta_home_user_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_15dp"
                    android:textColor="@color/my_color_999999"
                    android:textSize="@dimen/wz_13sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/ta_home_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:layout_marginLeft="@dimen/bj_30dp"
            android:layout_marginTop="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_30dp"
            android:background="#F5F5F5" />

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_10dp"
            android:background="@color/my_color_F0F0F0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_middle"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_44dp"
            android:background="@color/my_color_white"
            android:paddingLeft="@dimen/bj_15dp"
            android:paddingRight="@dimen/bj_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="聊天置顶"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_14sp" />

            <ImageView
                android:id="@+id/img_top_chat"
                android:layout_width="@dimen/bj_35dp"
                android:layout_height="@dimen/bj_18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/toggle_selector" />
        </RelativeLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:background="@color/my_color_f5f5f5" />

        <LinearLayout
            android:id="@+id/iv_ta_home_update_tag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_44dp"
            android:background="@color/my_color_FFFFFF"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/bj_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="好友备注名"
                android:textColor="@color/my_color_black" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bj_6dp"
                android:text=""
                android:textColor="@color/my_color_black" />

            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/bj_15dp"
                android:drawableRight="@mipmap/icon_arrow"
                android:drawablePadding="@dimen/bj_5dp"
                android:ellipsize="end"
                android:gravity="right"
                android:maxWidth="@dimen/bj_200dp"
                android:singleLine="true"
                android:textColor="@color/my_color_A7A7A7" />
        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:background="@color/my_color_f5f5f5" />

        <RelativeLayout
            android:id="@+id/voice_set_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_45dp"
            android:background="@color/my_color_white"
            android:paddingLeft="@dimen/bj_15dp"
            android:paddingRight="@dimen/bj_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="消息免打扰"
                android:textColor="@color/my_color_black" />

            <ImageView
                android:id="@+id/img_voice_switch"
                android:layout_width="@dimen/bj_35dp"
                android:layout_height="@dimen/bj_18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/toggle_selector" />
        </RelativeLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_1dp"
            android:background="@color/my_color_f5f5f5" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/but_ta_home_user_send"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:layout_below="@id/layout_middle"
        android:layout_marginTop="15dp"
        android:background="@color/my_color_white"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_color_white"
            android:text="发消息"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/but_ta_home_user_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:layout_below="@id/but_ta_home_user_send"
        android:layout_marginTop="15dp"
        android:background="@color/my_color_white"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_color_white"
            android:text="添加好友"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/but_ta_home_user_del"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/bj_10dp"
        android:background="@color/my_color_white"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_color_white"
            android:text="删除好友"
            android:textColor="@color/my_color_E10020"
            android:textSize="@dimen/wz_15sp" />
    </RelativeLayout>
</RelativeLayout>