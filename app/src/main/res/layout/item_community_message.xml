<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_12dp"
    android:paddingBottom="@dimen/bj_11dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/bj_20dp"
        android:paddingRight="@dimen/bj_17dp">

        <com.smg.variety.view.widgets.CircleImageView
            android:id="@+id/iv_item_community_message_user_avatar"
            android:layout_width="35dp"
            android:layout_height="@dimen/bj_35dp"
            android:src="@mipmap/user_avatar_normal" />

        <TextView
            android:id="@+id/tv_item_community_message_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:singleLine="true"
            android:layout_toRightOf="@+id/iv_item_community_message_user_avatar"
            android:text="夏天的尾巴"
            android:textColor="#ff000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_community_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_community_message_user_name"
            android:layout_alignBottom="@+id/iv_item_community_message_user_avatar"
            android:layout_marginTop="@dimen/bj_3dp"
            android:text="2019-04-08   16:19"
            android:textColor="#ff999999"
            android:textSize="10sp" />
        <RelativeLayout
            android:id="@+id/rl_comment"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_item_community_message_time"
            android:layout_alignLeft="@+id/tv_item_community_message_user_name"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_community_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_15dp"
            android:text="祝福孩子们早日康复！"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_item_community_message_content"
            android:layout_marginTop="@dimen/bj_14dp"
            android:background="#F5F5F5" />
       <RelativeLayout
           android:id="@+id/rl_goods"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_alignLeft="@+id/tv_item_community_message_user_name"
           android:layout_below="@+id/tv_item_community_message_content"
           android:layout_height="wrap_content">
        <com.smg.variety.view.widgets.CircleImageView
            android:id="@+id/iv_item_community_icon"
            android:layout_width="@dimen/bj_21dp"
            android:layout_height="@dimen/bj_21dp"
            android:layout_marginLeft="@dimen/bj_3dp"
            android:layout_marginTop="25dp"
            android:src="@mipmap/user_avatar_normal" />

        <TextView
            android:id="@+id/tv_item_community_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_item_community_icon"
            android:layout_marginLeft="@dimen/bj_3dp"
            android:layout_marginTop="-5dp"
            android:layout_toRightOf="@+id/iv_item_community_icon"
            android:text="壹基金爱心工程"
            android:textColor="#ff000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item_community_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_item_community_name"
            android:layout_alignBottom="@+id/iv_item_community_icon"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="-3dp"
            android:text="2019-04-08   16:19"
            android:textColor="#ff999999"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_item_community_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_community_time"
            android:layout_alignLeft="@+id/tv_item_community_name"
            android:layout_marginTop="@dimen/bj_8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="要是我是一个健康的孩子爸爸妈妈就不会那么辛苦了要是我是一个健康的..."
            android:textColor="#ff666666"
            android:textSize="12sp" />
       </RelativeLayout>
        <TextView
            android:id="@+id/tv_commented_deleted"
            android:layout_width="match_parent"
            android:background="@color/my_color_f5f5f5"
            android:text="评价对象已删除"
            android:visibility="gone"
            android:layout_below="@+id/line"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_marginRight="@dimen/bj_10dp"
            android:layout_marginTop="@dimen/bj_10dp"
            android:paddingLeft="@dimen/bj_20dp"
            android:layout_height="@dimen/bj_35dp" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>