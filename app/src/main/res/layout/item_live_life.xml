<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="185dp"
        app:cardCornerRadius="@dimen/bj_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/red_packet_open" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_7dp"
                android:layout_marginTop="@dimen/bj_10dp"
                android:text="ID：254689"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/bj_7dp"
                android:layout_marginBottom="@dimen/bj_10dp"
                android:drawableLeft="@mipmap/player"
                android:drawablePadding="@dimen/bj_3dp"
                android:text="120万"
                android:textColor="#ffffffff"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/bj_7dp"
                android:layout_marginRight="@dimen/bj_7dp"
                android:layout_marginBottom="@dimen/bj_10dp"
                android:drawablePadding="@dimen/bj_3dp"
                android:text="962"
                android:textColor="#ffffffff"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_3dp"
        android:layout_marginTop="@dimen/bj_8dp"
        android:layout_marginRight="@dimen/bj_3dp"
        android:ellipsize="end"
        android:lines="2"
        android:text="带你旅游洛阳城，你该怎么做之洛阳城"
        android:textColor="#ff333333"
        android:textSize="14sp" />
</LinearLayout>