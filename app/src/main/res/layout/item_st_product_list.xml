<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_entity_store_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/bj_10dp">

    <ImageView
        android:id="@+id/iv_st_logo"
        android:layout_width="@dimen/bj_100dp"
        android:layout_height="@dimen/bj_100dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_st_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_st_logo"
        android:layout_marginLeft="@dimen/bj_20dp"
        android:layout_toRightOf="@+id/iv_st_logo"
        android:textColor="@color/my_color_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_st_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_st_product_name"
        android:layout_marginLeft="@dimen/bj_20dp"
        android:layout_marginTop="@dimen/bj_10dp"
        android:layout_toRightOf="@+id/iv_st_logo"
        android:textColor="@color/my_color_666666"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_st_brief"
        android:layout_toRightOf="@+id/iv_st_logo">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_st_price"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_st_label_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_20dp"
                android:layout_marginTop="@dimen/bj_10dp"
                android:layout_toRightOf="@+id/iv_st_logo"
                android:textColor="@color/my_color_E10020"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_st_label_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_st_label_one"
                android:layout_marginLeft="@dimen/bj_20dp"
                android:layout_marginTop="@dimen/bj_10dp"
                android:layout_toRightOf="@+id/iv_st_logo"
                android:textColor="@color/my_color_E10020"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_st_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginTop="@dimen/bj_10dp"
            android:textColor="@color/my_color_E10020"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>