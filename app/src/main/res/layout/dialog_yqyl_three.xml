<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <ScrollView
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:id="@+id/scroll"
        android:layout_centerInParent="true"
        android:scrollbars="none"
        android:background="@drawable/shape_white_5"
        android:layout_width="match_parent"
        android:layout_height="357dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/bj_30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请好友"
                android:textColor="#111"
                android:textSize="21sp" />

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_notice_content"
                    android:layout_marginTop="38dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您的专属导师微信号："
                    android:textColor="#111111"
                    android:textSize="15sp"
                    android:gravity="left"
                    />
                  <ImageView
                      android:layout_marginTop="26dp"
                      android:id="@+id/iv_img"
                      android:layout_width="187dp"
                      android:layout_height="187dp" />
                <!-- TextView "hddklhfkdfh_1_1" -->
                <TextView
                    android:id="@+id/tv_exam_no_notice"
                    android:layout_marginTop="28dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="让朋友扫描二维码\n邀请他加入"
                    android:textColor="#111111"
                    android:textSize="15sp"
                    android:gravity="left"
                    />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>



    <ImageView
        android:src="@drawable/yq_cancel"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/scroll"
        android:id="@+id/iv_close"
        android:layout_width="@dimen/bj_34dp"
        android:layout_height="@dimen/bj_34dp" />
</RelativeLayout>