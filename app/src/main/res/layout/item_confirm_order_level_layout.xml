<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:background="@color/my_color_f5f5f5"
        android:layout_marginLeft="@dimen/bj_10dp"
        android:layout_marginRight="@dimen/bj_10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_120dp">
        <ImageView
          android:id="@+id/iv_item_confirm_order_cover"
          android:layout_width="90dp"
          android:layout_height="85dp"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="@dimen/bj_30dp"
          android:layout_centerVertical="true"
          android:scaleType="centerCrop"
          android:src="@drawable/moren_sf" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/iv_item_confirm_order_cover"
            android:layout_alignTop="@id/iv_item_confirm_order_cover"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_confirm_order_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:lines="2"
                android:text="苹果X8 128G  玫瑰金"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_14sp" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_item_confirm_order_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/my_color_ff666666"
                android:textSize="@dimen/wz_12sp" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginTop="69dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_item_confirm_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="00.00"
                    android:textColor="@color/my_color_d60029"
                    android:textSize="@dimen/wz_15sp" />
                <TextView
                    android:layout_marginRight="11dp"
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="x1"
                    android:textColor="@color/my_color_666666"
                    android:textSize="@dimen/wz_12sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>