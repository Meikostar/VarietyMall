<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/bj_15dp"
        android:background="@color/my_color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="输入交易密码"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_14sp" />

        <ImageView
            android:id="@+id/iv_input_pwd_dialog_cancel"
            android:layout_width="@dimen/bj_15dp"
            android:layout_height="@dimen/bj_15dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_edit_tree_close" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/bj_200dp"
        android:layout_height="@dimen/bj_30dp"
        android:layout_gravity="center_horizontal">


        <EditText
            android:id="@+id/tv_input_pwd_dialog_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:inputType="numberPassword"
            android:text="0"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_input_pwd_dialog_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:inputType="numberPassword"
            android:text="0"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_input_pwd_dialog_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:inputType="numberPassword"
            android:text="0"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_input_pwd_dialog_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:inputType="numberPassword"
            android:text="0"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_input_pwd_dialog_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:inputType="numberPassword"
            android:text="0"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tv_input_pwd_dialog_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:inputType="numberPassword"
            android:text="0"
            android:textColor="@color/my_color_010000"
            android:textSize="@dimen/wz_23sp"
            android:textStyle="bold" />
    </LinearLayout>


    <Button
        android:id="@+id/but_input_pwd_dialog_ok_icon"
        android:layout_width="@dimen/bj_130dp"
        android:layout_height="@dimen/bj_45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bj_15dp"
        android:background="@mipmap/ok_icon" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_7dp"
        android:layout_marginTop="@dimen/bj_10dp"
        android:background="@color/my_color_DDDDDD" />

    <GridView
        android:id="@+id/gv_input_pwd_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color_DDDDDD"
        android:horizontalSpacing="@dimen/bj_2dp"
        android:listSelector="@null"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="@dimen/bj_2dp" />

</LinearLayout>