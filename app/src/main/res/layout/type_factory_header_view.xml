<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/type_factory_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_154dp"
        android:background="@color/my_color_F5F5F5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/bj_10dp"
        android:paddingBottom="@dimen/bj_10dp">
        <View
            android:layout_width="@dimen/bj_5dp"
            android:layout_height="@dimen/bj_20dp"
            android:layout_marginLeft="@dimen/bj_5dp"
            android:layout_marginRight="@dimen/bj_5dp"
            android:background="@color/my_color_E10020"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="超值推荐"
            android:textSize="@dimen/wz_16sp"
            android:textColor="@color/my_color_E10020"
            android:textStyle="bold"/>
     </LinearLayout>
     <com.smg.variety.view.widgets.autoview.SortingLayout
        android:id="@+id/sorting_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
</LinearLayout>