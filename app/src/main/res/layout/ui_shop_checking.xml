<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/action_bar" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_10dp"
        android:background="@color/my_color_f5f5f5"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:src="@drawable/shop_shz" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bj_30dp"
        android:text="开店等待审核中"
        android:textColor="#111111"
        android:textSize="@dimen/wz_18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/bj_20dp"
        android:textColor="@color/my_color_666666"
        android:text="预计1-3个工作日完成审核，请耐心等待审核结果吧"/>

    <TextView
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bj_43dp"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginRight="@dimen/bj_15dp"
        android:layout_marginTop="@dimen/bj_50dp"
        android:background="@drawable/shape_radius_5_e10020"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffffff"
        android:textSize="16sp" />
</LinearLayout>