<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="@dimen/bj_10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_action_icon"
        android:layout_width="@dimen/bj_140dp"
        android:layout_height="@dimen/bj_83dp"
        app:cardCornerRadius="@dimen/bj_5dp">

        <ImageView
            android:id="@+id/iv_action_icon"
            android:layout_width="@dimen/bj_140dp"
            android:layout_height="@dimen/bj_83dp"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_24dp"
        android:layout_toRightOf="@+id/cv_action_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_action_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_action_introduce"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/bj_10dp"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="#ff666666"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_item_action_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_6dp"
            android:textColor="#ff999999"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>