<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/bj_50dp"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_20dp"
            android:layout_marginTop="@dimen/bj_20dp">
            <ImageView
                android:id="@+id/img_user_header"
                android:layout_width="@dimen/bj_50dp"
                android:layout_height="@dimen/bj_50dp"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/tv_topic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img_user_header"
                android:layout_marginLeft="@dimen/bj_10dp"
                android:layout_toRightOf="@id/img_user_header"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/my_color_black"
                android:textSize="@dimen/wz_16sp" />
            <ImageView
                android:id="@+id/iv_topic_follow"
                android:layout_width="@dimen/bj_50dp"
                android:layout_height="@dimen/bj_25dp"
                android:layout_alignTop="@id/img_user_header"
                android:layout_marginRight="@dimen/bj_10dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_follow"
                android:background="@drawable/bg_white_shape_topic"
                android:paddingTop="@dimen/bj_5dp"
                android:paddingBottom="@dimen/bj_5dp"
                android:paddingLeft="@dimen/bj_10dp"
                android:paddingRight="@dimen/bj_10dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/iv_topic_follow_alr"
                android:layout_width="@dimen/bj_50dp"
                android:layout_height="@dimen/bj_25dp"
                android:layout_alignTop="@id/img_user_header"
                android:layout_marginRight="@dimen/bj_10dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_white_shape_topic"
                android:src="@mipmap/ic_follow_alr"
                android:paddingTop="@dimen/bj_5dp"
                android:paddingBottom="@dimen/bj_5dp"
                android:paddingLeft="@dimen/bj_10dp"
                android:paddingRight="@dimen/bj_10dp"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/img_user_header"
                android:layout_toLeftOf="@id/tv_topic_follow"
                android:layout_below="@id/tv_topic_name"
                android:paddingBottom="@dimen/bj_2dp"
                android:gravity="bottom">
                <TextView
                    android:id="@+id/tv_topic_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/my_color_666666"
                    android:textSize="@dimen/wz_12sp" />
                <TextView
                    android:id="@+id/tv_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_30dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/my_color_666666"
                    android:textSize="@dimen/wz_12sp" />
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_topic_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_10dp"
            android:layout_marginBottom="@dimen/bj_10dp"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_20dp"/>
        <com.jaeger.ninegridimageview.NineGridImageView
            android:id="@+id/ngl_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_20dp"
            android:layout_marginTop="@dimen/bj_12dp"
            android:visibility="visible"
            app:imgGap="3dp"
            app:showStyle="grid"
            app:singleImgSize="120dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/my_color_f5f5f5"
            android:layout_marginTop="@dimen/bj_20dp"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/bj_20dp"
            android:paddingBottom="@dimen/bj_10dp"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_20dp">
            <LinearLayout
                android:id="@+id/layout_reward"
                android:layout_width="@dimen/bj_0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_reward"
                    android:layout_width="@dimen/bj_15dp"
                    android:layout_height="@dimen/bj_15dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_reward"/>
                <TextView
                    android:id="@+id/tv_reward_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_5dp"
                    android:text="0"
                    android:textColor="@color/my_color_666666"
                    android:textSize="@dimen/wz_12sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_praise"
                android:layout_width="@dimen/bj_0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_praise"
                    android:layout_width="@dimen/bj_15dp"
                    android:layout_height="@dimen/bj_15dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_praise"/>
                <TextView
                    android:id="@+id/tv_praise_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_5dp"
                    android:text="0"
                    android:textColor="@color/my_color_666666"
                    android:textSize="@dimen/wz_12sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_save"
                android:layout_width="@dimen/bj_0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_save"
                    android:layout_width="@dimen/bj_15dp"
                    android:layout_height="@dimen/bj_15dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_save"/>
                <TextView
                    android:id="@+id/tv_save_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/bj_5dp"
                    android:text="0"
                    android:textColor="@color/my_color_666666"
                    android:textSize="@dimen/wz_12sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/bj_10dp"
            android:paddingBottom="@dimen/bj_10dp"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享到:"/>
            <ImageView
                android:id="@+id/iv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_30dp"
                android:src="@mipmap/ic_weixin"/>
            <ImageView
                android:id="@+id/iv_pyq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bj_30dp"
                android:src="@mipmap/ic_pengyouquan"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyle_detail_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bj_20dp"
            android:layout_marginLeft="@dimen/bj_20dp"
            android:layout_marginRight="@dimen/bj_20dp">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <com.smg.variety.view.widgets.autoview.MaxRecyclerView
        android:id="@+id/recycle_ad_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/bj_10dp"
        android:paddingRight="@dimen/bj_10dp"/>
    <LinearLayout
        android:id="@+id/ll_comment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_article_all_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bj_16dp"
            android:layout_marginTop="@dimen/bj_10dp"
            android:text="全部评论"
            android:textColor="#ff333333"
            android:textSize="14sp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_article_no_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/bj_25dp"
            android:layout_marginBottom="@dimen/bj_20dp"
            android:text="暂无评论" />
    </LinearLayout>
</LinearLayout>