<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/bj_10dp"
    android:paddingTop="@dimen/bj_19dp"
    android:paddingRight="@dimen/dp_10"
    >

    <ImageView
        android:id="@+id/iv_item_recharget_withdraw_detail_icon"
        android:layout_width="@dimen/bj_40dp"
        android:layout_height="@dimen/bj_40dp"
        android:src="@mipmap/withdraw" />

    <TextView
        android:id="@+id/tv_item_recharget_withdraw_detail_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginTop="-1dp"
        android:layout_toRightOf="@+id/iv_item_recharget_withdraw_detail_icon"
        android:text="充值"
        android:textColor="#ff333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_recharget_withdraw_detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_recharget_withdraw_detail_icon"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:layout_marginBottom="-1dp"
        android:layout_toRightOf="@+id/iv_item_recharget_withdraw_detail_icon"
        android:text="2019/04/09  18:16"
        android:textColor="#ff999999"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_item_recharget_withdraw_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="-100.00"
        android:textColor="#FD2323"
        android:textSize="18sp" />
    <TextView
       style="@style/line_1"
        android:layout_below="@id/iv_item_recharget_withdraw_detail_icon"
        android:layout_marginTop="@dimen/bj_19dp"/>
</RelativeLayout>