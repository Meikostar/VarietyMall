<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_25dp">

    <include layout="@layout/layout_title_view" />
    <View
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F5F5F5" />
    <ScrollView

        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="@dimen/bj_13dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="@dimen/bj_4dp"
                    android:layout_height="@dimen/bj_15dp"
                    android:background="#0266CA"/>
                <TextView
                    android:layout_marginLeft="@dimen/bj_5dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="基本信息"
                    android:textColor="#ff333333"
                    android:textSize="16sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="18dp"
                android:id="@+id/rl_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/bj_15dp"
                android:paddingTop="@dimen/bj_10dp"
                android:paddingRight="@dimen/bj_15dp"
                android:paddingBottom="@dimen/bj_10dp">

                <ImageView
                    android:src="@drawable/img_logo"
                    android:id="@+id/civ_user_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/bj_15dp"
                    android:layout_marginRight="@dimen/bj_25dp"
                    />

                <TextView
                    android:textColor="#6C6E74"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="LOGO" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arr_right" />
            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e8e8e8" />
            <LinearLayout
                android:layout_marginLeft="@dimen/bj_13dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="店铺名称"
                    android:textColor="#6C6E74"
                    android:textSize="14sp" />

                <EditText
                    android:textColor="@color/my_color_333333"
                    android:paddingRight="30dp"
                    android:paddingLeft="35dp"
                    android:id="@+id/et_content1"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColorHint="#ffd4d6d9"
                    android:background="@null"
                    android:hint="请输入店铺名称" />


            </LinearLayout>
            <View
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e8e8e8" />
            <LinearLayout
                android:layout_marginLeft="@dimen/bj_13dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系人"
                    android:textColor="#6C6E74"
                    android:textSize="14sp" />

                <EditText
                    android:textColor="@color/my_color_333333"

                    android:paddingRight="30dp"
                    android:paddingLeft="50dp"
                    android:id="@+id/et_content2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColorHint="#ffd4d6d9"
                    android:background="@null"
                    android:hint="联系人姓名" />


            </LinearLayout>
            <View
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e8e8e8" />
            <LinearLayout
                android:layout_marginLeft="@dimen/bj_13dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="联系人电话"
                    android:textColor="#6C6E74"
                    android:textSize="14sp" />

                <EditText
                    android:textColor="@color/my_color_333333"
                    android:inputType="phone"
                    android:paddingRight="30dp"
                    android:paddingLeft="25dp"
                    android:id="@+id/et_content3"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:textColorHint="#ffd4d6d9"
                    android:background="@null"
                    android:hint="联系人电话" />


            </LinearLayout>
            <View
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e8e8e8" />
            <LinearLayout
                android:id="@+id/ll_choose"
                android:layout_marginLeft="@dimen/bj_13dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="经营类目"
                    android:textColor="#6C6E74"
                    android:textSize="14sp" />

                <TextView
                    android:textColor="@color/my_color_333333"
                     android:id="@+id/tv_type"
                    android:paddingLeft="35dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="选择行业分类"
                    android:textColorHint="#ffd4d6d9"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/arr_right" />
            </LinearLayout>
            <View
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#e8e8e8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F5F5F5" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginLeft="@dimen/bj_13dp"
                    android:layout_marginTop="17dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="@dimen/bj_4dp"
                        android:layout_height="@dimen/bj_15dp"
                        android:background="#0266CA"/>
                    <TextView
                        android:layout_marginLeft="@dimen/bj_5dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="身份信息"
                        android:textColor="#ff333333"
                        android:textSize="16sp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_marginTop="18dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加身份证正面"
                        android:textColor="#ff6c6e74"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_marginTop="17dp"
                        android:id="@+id/iv_img11"
                        android:src="@drawable/icon_cer_1"
                        android:layout_width="219dp"
                        android:layout_height="133dp" />

                </LinearLayout>
                <LinearLayout

                    android:layout_marginTop="22dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加身份证反面"
                        android:textColor="#ff6c6e74"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_marginTop="17dp"
                        android:id="@+id/iv_img22"
                        android:src="@drawable/icon_cer_2"
                        android:layout_width="219dp"
                        android:layout_height="133dp" />

                </LinearLayout>
                <LinearLayout

                    android:layout_marginTop="22dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加品牌授权资质"
                        android:textColor="#ff6c6e74"
                        android:textSize="12sp"
                        />
                    <ImageView
                        android:layout_marginTop="17dp"
                        android:id="@+id/iv_img33"
                        android:src="@drawable/icon_cer_3"
                        android:layout_width="219dp"
                        android:layout_height="133dp" />

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingTop="@dimen/bj_57dp">
                <LinearLayout
                    android:layout_marginBottom="23dp"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/bj_14dp"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/cb_register_check_box"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/checkbox.theme"
                        android:checked="false"

                        android:text="  同意商户入住协议 "
                        android:textColor="#ff838383"
                        android:textSize="11sp" />



                </LinearLayout>
                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bj_43dp"
                    android:layout_marginLeft="@dimen/bj_15dp"

                    android:layout_marginRight="@dimen/bj_15dp"
                    android:background="@drawable/shape_radius_5_e10020"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="#ffffffff"
                    android:textSize="16sp" />



            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
