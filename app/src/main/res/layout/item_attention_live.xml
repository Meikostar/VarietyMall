<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="66dp">

    <ImageView
        android:id="@+id/iv_red_point"
        android:layout_width="@dimen/bj_6dp"
        android:layout_height="@dimen/bj_6dp"
        android:src="@drawable/shape_red_point"
        android:visibility="gone" />

    <com.smg.variety.view.widgets.CircleImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/bj_48dp"
        android:layout_height="@dimen/bj_48dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:scaleType="centerCrop" />
    <LinearLayout

        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="77dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#111111"
            android:text=""
            android:textSize="12sp" />
        <TextView
            android:text=""
            android:layout_marginTop="6dp"
            android:id="@+id/tv_fs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff999999"
            android:textSize="10sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_state"
        android:gravity="center"
        android:text="已关注"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:layout_width="55dp"
        android:layout_height="26dp"
        android:background="@drawable/blue_regrect_line15"
        android:layout_alignParentRight="true"
        android:textColor="@color/my_color_head1"
        android:textSize="12sp" />
    <View
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="0.3dp"
        android:layout_marginLeft="@dimen/bj_15dp"
        android:background="#EEEEEE"/>
</RelativeLayout>