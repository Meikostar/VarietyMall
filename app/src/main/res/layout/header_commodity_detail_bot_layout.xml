<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_commodity_detail_bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="51dp"
    android:layout_alignParentBottom="true"
    android:background="@color/my_color_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    
  <LinearLayout
      android:background="@drawable/retgle_back_line_bg"
      android:layout_weight="3.2"
      android:orientation="horizontal"
      android:layout_width="0dp"
      android:layout_height="match_parent">
      <RelativeLayout

          android:id="@+id/layout_shop"
          android:layout_width="0dp"
          android:layout_weight="1"

          android:layout_height="match_parent">
          <ImageView
              android:id="@+id/iv_shop"
              android:layout_width="19dp"
              android:layout_height="20dp"
              android:layout_centerHorizontal="true"
              android:layout_alignParentTop="true"
              android:layout_marginTop="@dimen/bj_5dp"
              android:src="@drawable/dian_p"/>
          <TextView
              android:id="@+id/tv_shop"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="@dimen/bj_5dp"
              android:text="店铺"
              android:textColor="#797979"
              android:textSize="@dimen/wz_11sp"/>
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/layout_save"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent">
          <ImageView
              android:layout_marginLeft="18dp"
              android:id="@+id/iv_save"
              android:layout_width="@dimen/bj_20dp"
              android:layout_height="19dp"
              android:layout_centerHorizontal="true"
              android:layout_alignParentTop="true"
              android:layout_marginTop="@dimen/bj_5dp"
              android:src="@drawable/ic_collect_n"/>
          <TextView
              android:id="@+id/tv_save"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="@dimen/bj_5dp"
              android:text="收藏"
              android:textColor="#797979"
              android:textSize="@dimen/wz_11sp"/>
      </RelativeLayout>
      <RelativeLayout
          android:id="@+id/rl_car"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent">
          <ImageView
              android:layout_marginLeft="25dp"
              android:id="@+id/iv_car"
              android:layout_width="@dimen/bj_28dp"
              android:layout_height="@dimen/bj_18dp"
              android:layout_centerHorizontal="true"
              android:layout_alignParentTop="true"
              android:layout_marginTop="@dimen/bj_6dp"
              android:src="@drawable/icon_cart"/>
          <TextView
              android:id="@+id/tv_car"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="@dimen/bj_5dp"
              android:text="购物车"
              android:textColor="#797979"
              android:textSize="@dimen/wz_11sp"/>
      </RelativeLayout>
      <RelativeLayout
          android:layout_marginRight="3dp"
          android:id="@+id/layout_service"
          android:layout_width="0dp"
          android:layout_weight="1.1"
          android:layout_height="match_parent">
          <ImageView
              android:layout_marginRight="29dp"
              android:id="@+id/iv_service"
              android:layout_width="@dimen/bj_20dp"
              android:layout_height="@dimen/bj_20dp"
              android:layout_centerHorizontal="true"
              android:layout_alignParentTop="true"
              android:layout_marginTop="@dimen/bj_5dp"
              android:src="@drawable/icon_service"/>
          <TextView
              android:singleLine="true"
              android:layout_marginLeft="25dp"
              android:id="@+id/tv_service"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="@dimen/bj_5dp"
              android:text="客服"
              android:textColor="#797979"
              android:textSize="@dimen/wz_11sp"/>
      </RelativeLayout>
  </LinearLayout>
    <TextView
        android:id="@+id/tv_add_cart"
        android:layout_width="@dimen/bj_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="#fb7f49"
        android:gravity="center"
        android:text="加入购物车"
        android:textColor="@color/my_color_white"
        android:textSize="@dimen/wz_14sp" />
    <TextView
        android:id="@+id/tv_shop_cart_submit"
        android:layout_width="@dimen/bj_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:background="@color/my_color_E10020"
        android:gravity="center"
        android:text="立即购买"
        android:textColor="@color/my_color_white"
        android:textSize="@dimen/wz_14sp" />
</LinearLayout>