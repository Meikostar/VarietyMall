<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_news_ad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_color_FFFFFF"
    android:orientation="vertical"
    android:paddingTop="@dimen/bj_10dp"
    android:paddingBottom="@dimen/bj_10dp">

    <ImageView
        android:id="@+id/iv_news_ad"
        android:layout_width="@dimen/bj_155dp"
        android:layout_height="@dimen/bj_95dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_news_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_news_ad"
            android:layout_marginTop="@dimen/bj_5dp"
            android:layout_marginLeft="@dimen/bj_10dp"
            android:layout_toRightOf="@id/iv_news_ad"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="@color/my_color_black"
            android:textSize="@dimen/wz_14sp" />

       <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_alignBottom="@id/iv_news_ad"
         android:layout_toRightOf="@id/iv_news_ad">
           <TextView
               android:id="@+id/tv_new_ad_des"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignBottom="@id/iv_one"
               android:layout_alignParentRight="true"
               android:layout_marginLeft="@dimen/bj_10dp"
               android:layout_toRightOf="@id/iv_news_ad"
               android:gravity="right"
               android:textColor="@color/my_color_666666"
               android:textSize="@dimen/wz_12sp" />

           <TextView
               android:id="@+id/tv_new_ad_num"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_above="@id/tv_one_time"
               android:layout_below="@id/tv_one_title"
               android:layout_marginLeft="@dimen/bj_10dp"
               android:layout_toRightOf="@id/iv_one"
               android:gravity="center_vertical"
               android:ellipsize="end"
               android:maxLines="2"
               android:textColor="@color/my_color_666666"
               android:textSize="@dimen/wz_12sp" />
      </LinearLayout>
</RelativeLayout>