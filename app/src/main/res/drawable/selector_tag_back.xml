<?xml version="1.0" encoding="utf-8"?>
<!-- 标签的背景 label_bg -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- 标签选中时的背景 -->
        <item android:state_selected="true">
            <shape>
                <stroke android:width="1dp" android:color="@color/my_color_d60029" />
                <corners android:radius="12dp" />
                <solid android:color="@color/my_color_d60029" />
            </shape>
        </item>
        <!-- 标签的正常背景 -->
        <item>
            <shape>
                <stroke android:width="1dp" android:color="@color/my_color_white" />
                <corners android:radius="12dp" />
                <solid android:color="@color/my_color_white" />
            </shape>
        </item>
</selector>
